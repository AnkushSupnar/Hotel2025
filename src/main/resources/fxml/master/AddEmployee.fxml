<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="item-root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.frontend.controller.master.AddEmployeeController">
   <stylesheets>
      <URL value="@../css/item-material.css" />
   </stylesheets>
   <children>
      <!-- Header with Back Button -->
      <HBox alignment="CENTER_LEFT" styleClass="item-header">
         <children>
            <!-- Back Button -->
            <Button fx:id="btnBack" styleClass="back-button">
               <graphic>
                  <HBox alignment="CENTER" spacing="8">
                     <children>
                        <FontAwesomeIcon glyphName="ARROW_LEFT" size="1.5em" styleClass="back-icon" />
                        <Label styleClass="back-text" text="BACK" />
                     </children>
                  </HBox>
               </graphic>
            </Button>

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- Title -->
            <Label styleClass="item-title" text="Employee Management" />

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
      </HBox>

      <!-- Main Content - Split Layout -->
      <HBox styleClass="item-content" VBox.vgrow="ALWAYS">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <children>
            <!-- LEFT SECTION - Form with ScrollPane -->
            <VBox styleClass="form-section">
               <HBox.margin>
                  <Insets right="15.0" />
               </HBox.margin>
               <children>
                  <!-- Form Header -->
                  <HBox alignment="CENTER_LEFT" spacing="12">
                     <children>
                        <FontAwesomeIcon fill="#667eea" glyphName="PLUS_CIRCLE" size="1.8em" />
                        <Label styleClass="form-section-title" text="Add New Employee" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="15.0" />
                     </VBox.margin>
                  </HBox>

                  <!-- Scrollable Form Content -->
                  <ScrollPane fitToWidth="true" hbarPolicy="NEVER" pannable="false" styleClass="form-scroll-pane" VBox.vgrow="ALWAYS">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <content>
                        <VBox spacing="20.0">
                           <padding>
                              <Insets bottom="20.0" left="15.0" right="20.0" top="5.0" />
                           </padding>
                           <children>

                              <!-- First Name Field -->
                              <VBox spacing="8">
                                 <children>
                                    <Label styleClass="input-label" text="FIRST NAME *" />
                                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                       <children>
                                          <FontAwesomeIcon fill="#7E57C2" glyphName="USER" size="1.2em" styleClass="input-icon" />
                                          <TextField fx:id="txtFirstName" promptText="naava" styleClass="material-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- Middle Name Field -->
                              <VBox spacing="8">
                                 <children>
                                    <Label styleClass="input-label" text="MIDDLE NAME" />
                                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                       <children>
                                          <FontAwesomeIcon fill="#7E57C2" glyphName="USER" size="1.2em" styleClass="input-icon" />
                                          <TextField fx:id="txtMiddleName" promptText="vaDIlaaMcao naava" styleClass="material-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- Last Name Field -->
                              <VBox spacing="8">
                                 <children>
                                    <Label styleClass="input-label" text="LAST NAME" />
                                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                       <children>
                                          <FontAwesomeIcon fill="#7E57C2" glyphName="USER" size="1.2em" styleClass="input-icon" />
                                          <TextField fx:id="txtLastName" promptText="AaDnaava" styleClass="material-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- Mobile Number Field -->
                              <VBox spacing="8">
                                 <children>
                                    <Label styleClass="input-label" text="MOBILE NUMBER *" />
                                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                       <children>
                                          <FontAwesomeIcon fill="#7E57C2" glyphName="PHONE" size="1.2em" styleClass="input-icon" />
                                          <TextField fx:id="txtMobileNo" promptText="Enter mobile number" styleClass="material-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- Alternate Mobile Field -->
                              <VBox spacing="8">
                                 <children>
                                    <Label styleClass="input-label" text="ALTERNATE MOBILE" />
                                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                       <children>
                                          <FontAwesomeIcon fill="#7E57C2" glyphName="MOBILE_PHONE" size="1.2em" styleClass="input-icon" />
                                          <TextField fx:id="txtAlternateMobile" promptText="Enter alternate mobile" styleClass="material-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- Email Field -->
                              <VBox spacing="8">
                                 <children>
                                    <Label styleClass="input-label" text="EMAIL" />
                                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                       <children>
                                          <FontAwesomeIcon fill="#7E57C2" glyphName="ENVELOPE" size="1.2em" styleClass="input-icon" />
                                          <TextField fx:id="txtEmail" promptText="Enter email address" styleClass="material-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- Address Line Field -->
                              <VBox spacing="8">
                                 <children>
                                    <Label styleClass="input-label" text="ADDRESS" />
                                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                       <children>
                                          <FontAwesomeIcon fill="#7E57C2" glyphName="HOME" size="1.2em" styleClass="input-icon" />
                                          <TextField fx:id="txtAddressLine" promptText="pattaa" styleClass="material-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- City Field -->
                              <VBox spacing="8">
                                 <children>
                                    <Label styleClass="input-label" text="CITY" />
                                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                       <children>
                                          <FontAwesomeIcon fill="#7E57C2" glyphName="BUILDING" size="1.2em" styleClass="input-icon" />
                                          <TextField fx:id="txtCity" promptText="Sahracao naava" styleClass="material-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- Taluka Field -->
                              <VBox spacing="8">
                                 <children>
                                    <Label styleClass="input-label" text="TALUKA" />
                                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                       <children>
                                          <FontAwesomeIcon fill="#7E57C2" glyphName="MAP_MARKER" size="1.2em" styleClass="input-icon" />
                                          <TextField fx:id="txtTaluka" promptText="taalauka" styleClass="material-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- District Field -->
                              <VBox spacing="8">
                                 <children>
                                    <Label styleClass="input-label" text="DISTRICT" />
                                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                       <children>
                                          <FontAwesomeIcon fill="#7E57C2" glyphName="MAP_MARKER" size="1.2em" styleClass="input-icon" />
                                          <TextField fx:id="txtDistrict" promptText="ijalha" styleClass="material-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- State Field -->
                              <VBox spacing="8">
                                 <children>
                                    <Label styleClass="input-label" text="STATE" />
                                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                       <children>
                                          <FontAwesomeIcon fill="#7E57C2" glyphName="GLOBE" size="1.2em" styleClass="input-icon" />
                                          <TextField fx:id="txtState" promptText="rajya" styleClass="material-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- Pincode Field -->
                              <VBox spacing="8">
                                 <children>
                                    <Label styleClass="input-label" text="PINCODE" />
                                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                       <children>
                                          <FontAwesomeIcon fill="#7E57C2" glyphName="LOCATION_ARROW" size="1.2em" styleClass="input-icon" />
                                          <TextField fx:id="txtPincode" promptText="Enter pincode" styleClass="material-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- Aadhar Number Field -->
                              <VBox spacing="8">
                                 <children>
                                    <Label styleClass="input-label" text="AADHAR NUMBER" />
                                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                       <children>
                                          <FontAwesomeIcon fill="#7E57C2" glyphName="CREDIT_CARD" size="1.2em" styleClass="input-icon" />
                                          <TextField fx:id="txtAadharNo" promptText="Enter Aadhar number" styleClass="material-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- Designation Field -->
                              <VBox spacing="8">
                                 <children>
                                    <Label styleClass="input-label" text="DESIGNATION *" />
                                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                       <children>
                                          <FontAwesomeIcon fill="#7E57C2" glyphName="BRIEFCASE" size="1.2em" styleClass="input-icon" />
                                          <ComboBox fx:id="cmbDesignation" editable="true" maxWidth="Infinity" promptText="Select designation" styleClass="material-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- Salary Field -->
                              <VBox spacing="8">
                                 <children>
                                    <Label styleClass="input-label" text="CURRENT SALARY" />
                                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                       <children>
                                          <FontAwesomeIcon fill="#7E57C2" glyphName="MONEY" size="1.2em" styleClass="input-icon" />
                                          <TextField fx:id="txtSalary" promptText="Enter salary" styleClass="material-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- Date Join Field -->
                              <VBox spacing="8">
                                 <children>
                                    <Label styleClass="input-label" text="DATE OF JOINING" />
                                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                       <children>
                                          <FontAwesomeIcon fill="#7E57C2" glyphName="CALENDAR" size="1.2em" styleClass="input-icon" />
                                          <DatePicker fx:id="dpDateJoin" maxWidth="Infinity" promptText="Select date" styleClass="material-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- Emergency Contact Name Field -->
                              <VBox spacing="8">
                                 <children>
                                    <Label styleClass="input-label" text="EMERGENCY CONTACT NAME" />
                                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                       <children>
                                          <FontAwesomeIcon fill="#7E57C2" glyphName="USER_PLUS" size="1.2em" styleClass="input-icon" />
                                          <TextField fx:id="txtEmergencyName" promptText="AapatakalaIna saMpak-" styleClass="material-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- Emergency Contact Number Field -->
                              <VBox spacing="8">
                                 <children>
                                    <Label styleClass="input-label" text="EMERGENCY CONTACT NUMBER" />
                                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                       <children>
                                          <FontAwesomeIcon fill="#7E57C2" glyphName="PHONE_SQUARE" size="1.2em" styleClass="input-icon" />
                                          <TextField fx:id="txtEmergencyNo" promptText="Enter emergency contact number" styleClass="material-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- Remarks Field -->
                              <VBox spacing="8">
                                 <children>
                                    <Label styleClass="input-label" text="REMARKS" />
                                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                       <children>
                                          <FontAwesomeIcon fill="#7E57C2" glyphName="COMMENT" size="1.2em" styleClass="input-icon" />
                                          <TextField fx:id="txtRemarks" promptText="rImaak-" styleClass="material-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- Active Status Checkbox -->
                              <VBox spacing="8">
                                 <children>
                                    <HBox alignment="CENTER_LEFT" spacing="12">
                                       <children>
                                          <CheckBox fx:id="chkActiveStatus" selected="true" styleClass="material-checkbox" text="Active Employee" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- Action Buttons -->
                              <VBox spacing="12">
                                 <children>
                                    <Button fx:id="btnSave" maxWidth="Infinity" styleClass="btn-primary-full" text="SAVE EMPLOYEE">
                                       <graphic>
                                          <FontAwesomeIcon fill="white" glyphName="SAVE" size="1.2em" />
                                       </graphic>
                                    </Button>
                                    <Button fx:id="btnUpdate" managed="false" maxWidth="Infinity" styleClass="btn-warning-full" text="UPDATE EMPLOYEE" visible="false">
                                       <graphic>
                                          <FontAwesomeIcon fill="white" glyphName="EDIT" size="1.2em" />
                                       </graphic>
                                    </Button>
                                    <Button fx:id="btnClear" maxWidth="Infinity" styleClass="btn-secondary-full" text="CLEAR FORM">
                                       <graphic>
                                          <FontAwesomeIcon fill="#667eea" glyphName="ERASER" size="1.2em" />
                                       </graphic>
                                    </Button>
                                 </children>
                                 <VBox.margin>
                                    <Insets top="10.0" />
                                 </VBox.margin>
                              </VBox>

                           </children>
                        </VBox>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>

            <!-- RIGHT SECTION - Data Table -->
            <VBox spacing="20.0" styleClass="table-section" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="15.0" />
               </HBox.margin>
               <children>
                  <!-- Table Header with Search -->
                  <VBox spacing="15">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="12">
                           <children>
                              <FontAwesomeIcon fill="#667eea" glyphName="LIST" size="1.8em" />
                              <Label styleClass="table-section-title" text="Existing Employees" />
                              <Region HBox.hgrow="ALWAYS" />
                              <Button fx:id="btnRefresh" styleClass="icon-button">
                                 <graphic>
                                    <FontAwesomeIcon fill="#667eea" glyphName="REFRESH" size="1.3em" />
                                 </graphic>
                              </Button>
                           </children>
                        </HBox>

                        <!-- Search Box -->
                        <HBox spacing="12">
                           <children>
                              <VBox spacing="8" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="search-label" text="Search by Name or Mobile" />
                                    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="search-container">
                                       <children>
                                          <FontAwesomeIcon fill="#9e9e9e" glyphName="SEARCH" size="1.1em" styleClass="search-icon" />
                                          <TextField fx:id="txtSearch" promptText="naava SaaoQaa......" styleClass="search-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Table -->
                  <TableView fx:id="tblEmployees" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colId" maxWidth="50" minWidth="50" prefWidth="50" styleClass="id-column" text="ID" />
                        <TableColumn fx:id="colFullName" prefWidth="280" text="Full Name" />
                        <TableColumn fx:id="colMobile" prefWidth="110" text="Mobile" />
                        <TableColumn fx:id="colDesignation" prefWidth="110" text="Designation" />
                        <TableColumn fx:id="colCity" prefWidth="75" text="City" />
                        <TableColumn fx:id="colSalary" prefWidth="80" text="Salary" />
                        <TableColumn fx:id="colStatus" prefWidth="70" text="Status" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
