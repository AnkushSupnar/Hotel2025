<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="item-root" xmlns="http://javafx.com/javafx/19.0.2.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.frontend.controller.master.AddEmployeeController">
   <stylesheets>
      <URL value="@../css/item-material.css" />
   </stylesheets>
   <children>
      <!-- Header with Back Button -->
      <HBox alignment="CENTER_LEFT" styleClass="item-header">
         <children>
            <!-- Back Button -->
            <Button fx:id="btnBack" styleClass="back-button">
               <graphic>
                  <HBox alignment="CENTER" spacing="8">
                     <children>
                        <FontAwesomeIcon glyphName="ARROW_LEFT" size="1.5em" styleClass="back-icon" />
                        <Label styleClass="back-text" text="BACK" />
                     </children>
                  </HBox>
               </graphic>
            </Button>

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- Title -->
            <Label styleClass="item-title" text="Employee Management" />

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
      </HBox>

      <!-- Main Content - Split Layout -->
      <HBox styleClass="item-content" VBox.vgrow="ALWAYS">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <children>
            <!-- LEFT SECTION - Form with ScrollPane -->
            <VBox styleClass="form-section">
               <HBox.margin>
                  <Insets right="15.0" />
               </HBox.margin>
               <children>
                  <!-- Form Header -->
                  <HBox alignment="CENTER_LEFT" spacing="12">
                     <children>
                        <FontAwesomeIcon fill="#667eea" glyphName="PLUS_CIRCLE" size="1.8em" />
                        <Label styleClass="form-section-title" text="Add New Employee" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="15.0" />
                     </VBox.margin>
                  </HBox>

                  <!-- Scrollable Form Content -->
                  <ScrollPane fitToWidth="true" hbarPolicy="NEVER" pannable="false" styleClass="form-scroll-pane" VBox.vgrow="ALWAYS">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <content>
                        <VBox spacing="20.0">
                           <padding>
                              <Insets bottom="20.0" left="15.0" right="20.0" top="5.0" />
                           </padding>
                           <children>

                  <!-- First Name Field -->
                  <VBox spacing="8">
                     <children>
                        <Label styleClass="input-label" text="FIRST NAME" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                           <children>
                              <FontAwesomeIcon fill="#7E57C2" glyphName="USER" size="1.2em" styleClass="input-icon" />
                              <TextField fx:id="txtFirstName" promptText="Enter first name" styleClass="material-input" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Middle Name Field -->
                  <VBox spacing="8">
                     <children>
                        <Label styleClass="input-label" text="MIDDLE NAME" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                           <children>
                              <FontAwesomeIcon fill="#7E57C2" glyphName="USER" size="1.2em" styleClass="input-icon" />
                              <TextField fx:id="txtMiddleName" promptText="Enter middle name" styleClass="material-input" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Last Name Field -->
                  <VBox spacing="8">
                     <children>
                        <Label styleClass="input-label" text="LAST NAME" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                           <children>
                              <FontAwesomeIcon fill="#7E57C2" glyphName="USER" size="1.2em" styleClass="input-icon" />
                              <TextField fx:id="txtLastName" promptText="Enter last name" styleClass="material-input" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Address Field -->
                  <VBox spacing="8">
                     <children>
                        <Label styleClass="input-label" text="ADDRESS" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                           <children>
                              <FontAwesomeIcon fill="#7E57C2" glyphName="HOME" size="1.2em" styleClass="input-icon" />
                              <TextField fx:id="txtAddress" promptText="Enter address" styleClass="material-input" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Contact Field -->
                  <VBox spacing="8">
                     <children>
                        <Label styleClass="input-label" text="CONTACT" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                           <children>
                              <FontAwesomeIcon fill="#7E57C2" glyphName="PHONE" size="1.2em" styleClass="input-icon" />
                              <TextField fx:id="txtContact" promptText="Enter contact number" styleClass="material-input" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Designation Field -->
                  <VBox spacing="8">
                     <children>
                        <Label styleClass="input-label" text="DESIGNATION" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                           <children>
                              <FontAwesomeIcon fill="#7E57C2" glyphName="BRIEFCASE" size="1.2em" styleClass="input-icon" />
                              <TextField fx:id="txtDesignation" promptText="Enter designation" styleClass="material-input" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Salary Field -->
                  <VBox spacing="8">
                     <children>
                        <Label styleClass="input-label" text="SALARY" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                           <children>
                              <FontAwesomeIcon fill="#7E57C2" glyphName="MONEY" size="1.2em" styleClass="input-icon" />
                              <TextField fx:id="txtSalary" promptText="Enter salary" styleClass="material-input" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Salary Type Field -->
                  <VBox spacing="8">
                     <children>
                        <Label styleClass="input-label" text="SALARY TYPE" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                           <children>
                              <FontAwesomeIcon fill="#7E57C2" glyphName="CALENDAR" size="1.2em" styleClass="input-icon" />
                              <ComboBox fx:id="cmbSalaryType" promptText="Select salary type" styleClass="material-input" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Status Field -->
                  <VBox spacing="8">
                     <children>
                        <Label styleClass="input-label" text="STATUS" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                           <children>
                              <FontAwesomeIcon fill="#7E57C2" glyphName="CHECK_CIRCLE" size="1.2em" styleClass="input-icon" />
                              <ComboBox fx:id="cmbStatus" promptText="Select status" styleClass="material-input" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                              <!-- Action Buttons -->
                              <VBox spacing="12">
                                 <children>
                                    <Button fx:id="btnSave" maxWidth="Infinity" styleClass="btn-primary-full" text="SAVE EMPLOYEE">
                                       <graphic>
                                          <FontAwesomeIcon fill="white" glyphName="SAVE" size="1.2em" />
                                       </graphic>
                                    </Button>
                                    <Button fx:id="btnUpdate" managed="false" maxWidth="Infinity" styleClass="btn-warning-full" text="UPDATE EMPLOYEE" visible="false">
                                       <graphic>
                                          <FontAwesomeIcon fill="white" glyphName="EDIT" size="1.2em" />
                                       </graphic>
                                    </Button>
                                    <Button fx:id="btnClear" maxWidth="Infinity" styleClass="btn-secondary-full" text="CLEAR FORM">
                                       <graphic>
                                          <FontAwesomeIcon fill="#667eea" glyphName="ERASER" size="1.2em" />
                                       </graphic>
                                    </Button>
                                 </children>
                                 <VBox.margin>
                                    <Insets top="10.0" />
                                 </VBox.margin>
                              </VBox>

                           </children>
                        </VBox>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>

            <!-- RIGHT SECTION - Data Table -->
            <VBox spacing="20.0" styleClass="table-section" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="15.0" />
               </HBox.margin>
               <children>
                  <!-- Table Header with Search -->
                  <VBox spacing="15">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="12">
                           <children>
                              <FontAwesomeIcon fill="#667eea" glyphName="LIST" size="1.8em" />
                              <Label styleClass="table-section-title" text="Existing Employees" />
                              <Region HBox.hgrow="ALWAYS" />
                              <Button fx:id="btnRefresh" styleClass="icon-button">
                                 <graphic>
                                    <FontAwesomeIcon fill="#667eea" glyphName="REFRESH" size="1.3em" />
                                 </graphic>
                              </Button>
                           </children>
                        </HBox>

                        <!-- Search Box -->
                        <HBox spacing="12">
                           <children>
                              <VBox spacing="8" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="search-label" text="Search by Name or Contact" />
                                    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="search-container">
                                       <children>
                                          <FontAwesomeIcon fill="#9e9e9e" glyphName="SEARCH" size="1.1em" styleClass="search-icon" />
                                          <TextField fx:id="txtSearch" promptText="Search employees..." styleClass="search-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Table -->
                  <TableView fx:id="tblEmployees" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colId" prefWidth="60" styleClass="id-column" text="ID" />
                        <TableColumn fx:id="colFullName" prefWidth="200" text="Full Name" />
                        <TableColumn fx:id="colContact" prefWidth="120" text="Contact" />
                        <TableColumn fx:id="colDesignation" prefWidth="150" text="Designation" />
                        <TableColumn fx:id="colSalary" prefWidth="100" text="Salary" />
                        <TableColumn fx:id="colStatus" prefWidth="100" text="Status" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
