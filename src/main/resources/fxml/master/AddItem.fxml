<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="item-root" xmlns="http://javafx.com/javafx/19.0.2.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.frontend.controller.master.AddItemController">
   <stylesheets>
      <URL value="@../css/item-material.css" />
   </stylesheets>
   <children>
      <!-- Header with Back Button -->
      <HBox alignment="CENTER_LEFT" styleClass="item-header">
         <children>
            <!-- Back Button -->
            <Button fx:id="btnBack" styleClass="back-button">
               <graphic>
                  <HBox alignment="CENTER" spacing="8">
                     <children>
                        <FontAwesomeIcon glyphName="ARROW_LEFT" size="1.5em" styleClass="back-icon" />
                        <Label styleClass="back-text" text="BACK" />
                     </children>
                  </HBox>
               </graphic>
            </Button>

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- Title -->
            <Label styleClass="item-title" text="Item Management" />

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- Export PDF Button -->
            <Button fx:id="btnExportPdf" styleClass="back-button">
               <graphic>
                  <HBox alignment="CENTER" spacing="8">
                     <children>
                        <FontAwesomeIcon glyphName="FILE_PDF_ALT" size="1.5em" styleClass="back-icon" />
                        <Label styleClass="back-text" text="PDF" />
                     </children>
                  </HBox>
               </graphic>
            </Button>

            <!-- Export Excel Button -->
            <Button fx:id="btnExportExcel" styleClass="back-button">
               <graphic>
                  <HBox alignment="CENTER" spacing="8">
                     <children>
                        <FontAwesomeIcon glyphName="FILE_EXCEL_ALT" size="1.5em" styleClass="back-icon" />
                        <Label styleClass="back-text" text="EXCEL" />
                     </children>
                  </HBox>
               </graphic>
            </Button>
         </children>
         <padding>
            <Insets bottom="15.0" left="30.0" right="30.0" top="15.0" />
         </padding>
      </HBox>

      <!-- Main Content - Split Layout -->
      <HBox styleClass="item-content" VBox.vgrow="ALWAYS">
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
         <children>
            <!-- LEFT SECTION - Form -->
            <VBox spacing="15.0" styleClass="form-section">
               <HBox.margin>
                  <Insets right="15.0" />
               </HBox.margin>
               <children>
                  <!-- Form Header -->
                  <HBox alignment="CENTER_LEFT" spacing="10">
                     <children>
                        <FontAwesomeIcon fill="#667eea" glyphName="PLUS_CIRCLE" size="1.5em" />
                        <Label styleClass="form-section-title" text="Add New Item" />
                     </children>
                  </HBox>

                  <!-- Item Name Field -->
                  <VBox spacing="5">
                     <children>
                        <Label styleClass="input-label" text="ITEM NAME" />
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="input-container">
                           <children>
                              <FontAwesomeIcon fill="#7E57C2" glyphName="CUTLERY" size="1.1em" styleClass="input-icon" />
                              <TextField fx:id="txtItemName" promptText="maalaacao naava" styleClass="material-input" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Category Field -->
                  <VBox spacing="5">
                     <children>
                        <Label styleClass="input-label" text="CATEGORY" />
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="input-container">
                           <children>
                              <FontAwesomeIcon fill="#7E57C2" glyphName="TAG" size="1.1em" styleClass="input-icon" />
                              <ComboBox fx:id="cmbCategory" maxWidth="Infinity" promptText="Select category" styleClass="material-combo" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Item Code Field -->
                  <VBox spacing="5">
                     <children>
                        <Label styleClass="input-label" text="ITEM CODE" />
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="input-container">
                           <children>
                              <FontAwesomeIcon fill="#7E57C2" glyphName="BARCODE" size="1.1em" styleClass="input-icon" />
                              <TextField fx:id="txtItemCode" promptText="Enter item code" styleClass="material-input" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Rate Field -->
                  <VBox spacing="5">
                     <children>
                        <Label styleClass="input-label" text="RATE (₹)" />
                        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="input-container">
                           <children>
                              <FontAwesomeIcon fill="#7E57C2" glyphName="MONEY" size="1.1em" styleClass="input-icon" />
                              <TextField fx:id="txtRate" promptText="Enter rate" styleClass="material-input" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Action Buttons -->
                  <VBox spacing="10">
                     <children>
                        <Button fx:id="btnSave" maxWidth="Infinity" styleClass="btn-primary-full" text="SAVE ITEM">
                           <graphic>
                              <FontAwesomeIcon fill="white" glyphName="SAVE" size="1.1em" />
                           </graphic>
                        </Button>
                        <Button fx:id="btnUpdate" managed="false" maxWidth="Infinity" styleClass="btn-warning-full" text="UPDATE ITEM" visible="false">
                           <graphic>
                              <FontAwesomeIcon fill="white" glyphName="EDIT" size="1.1em" />
                           </graphic>
                        </Button>
                        <Button fx:id="btnClear" maxWidth="Infinity" styleClass="btn-secondary-full" text="CLEAR FORM">
                           <graphic>
                              <FontAwesomeIcon fill="#667eea" glyphName="ERASER" size="1.1em" />
                           </graphic>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </VBox>

                  <!-- Spacer to push content to top -->
                  <Region VBox.vgrow="ALWAYS" />
               </children>
            </VBox>

            <!-- RIGHT SECTION - Data Table -->
            <VBox spacing="15.0" styleClass="table-section" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="15.0" />
               </HBox.margin>
               <children>
                  <!-- Table Header with Search -->
                  <VBox spacing="10">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                           <children>
                              <FontAwesomeIcon fill="#667eea" glyphName="LIST" size="1.5em" />
                              <Label styleClass="table-section-title" text="Existing Items" />
                              <Region HBox.hgrow="ALWAYS" />
                              <Button fx:id="btnRefresh" styleClass="icon-button">
                                 <graphic>
                                    <FontAwesomeIcon fill="#667eea" glyphName="REFRESH" size="1.2em" />
                                 </graphic>
                              </Button>
                           </children>
                        </HBox>

                        <!-- Search Box -->
                        <HBox spacing="10">
                           <children>
                              <VBox spacing="5" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="search-label" text="Search by Name" />
                                    <HBox alignment="CENTER_LEFT" spacing="8" styleClass="search-container">
                                       <children>
                                          <FontAwesomeIcon fill="#9e9e9e" glyphName="SEARCH" size="1em" styleClass="search-icon" />
                                          <TextField fx:id="txtSearch" promptText="maalaacao naava" styleClass="search-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <VBox prefWidth="180" spacing="5">
                                 <children>
                                    <Label styleClass="search-label" text="Filter by Category" />
                                    <HBox alignment="CENTER_LEFT" spacing="8" styleClass="search-container">
                                       <children>
                                          <FontAwesomeIcon fill="#9e9e9e" glyphName="FILTER" size="1em" styleClass="search-icon" />
                                          <ComboBox fx:id="cmbFilterCategory" maxWidth="Infinity" promptText="sava- k^TogaIrI" styleClass="filter-combo" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Table -->
                  <TableView fx:id="tblItems" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colId" styleClass="id-column" text="ID" />
                        <TableColumn fx:id="colItemName" styleClass="item-name-column" text="Item Name" />
                        <TableColumn fx:id="colCategory" text="Category" />
                        <TableColumn fx:id="colItemCode" text="Item Code" />
                        <TableColumn fx:id="colRate" text="Rate (₹)" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
