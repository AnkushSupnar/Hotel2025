<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.frontend.controller.AddCategoryController">
   <stylesheets>
      <URL value="@../css/master.css" />
   </stylesheets>
   <children>
      <!-- Header -->
      <HBox alignment="CENTER_LEFT" style="-fx-background-color: #e74c3c; -fx-padding: 15;">
         <children>
            <Circle fill="white" radius="8.0" />
            <Label style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: white;" text="Category Management">
               <HBox.margin>
                  <Insets left="15.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
      
      <!-- Form Section -->
      <VBox style="-fx-padding: 30; -fx-spacing: 20;">
         <children>
            <!-- Add Category Form -->
            <VBox style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-padding: 25; -fx-spacing: 15;">
               <children>
                  <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Add New Category" />
                  
                  <!-- Form Fields -->
                  <HBox spacing="20.0">
                     <children>
                        <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057;" text="Category Name *" />
                              <TextField fx:id="txtCategoryName" promptText="Enter category name" style="-fx-background-color: white; -fx-border-color: #ced4da; -fx-border-radius: 5; -fx-padding: 10; -fx-font-size: 16px;" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="8.0">
                           <children>
                              <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057;" text="Stock Status *" />
                              <ComboBox fx:id="cmbStock" prefWidth="150.0" promptText="Select status" style="-fx-background-color: white; -fx-border-color: #ced4da; -fx-border-radius: 5; -fx-font-size: 16px;" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  
                  <!-- Action Buttons -->
                  <HBox spacing="15.0" style="-fx-padding: 10 0 0 0;">
                     <children>
                        <Button fx:id="btnSave" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10 25; -fx-background-radius: 5; -fx-cursor: hand;" text="Save Category" />
                        <Button fx:id="btnClear" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10 25; -fx-background-radius: 5; -fx-cursor: hand;" text="Clear" />
                        <Button fx:id="btnRefresh" style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10 25; -fx-background-radius: 5; -fx-cursor: hand;" text="Refresh" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Categories Table -->
            <VBox style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-padding: 25; -fx-spacing: 15;">
               <children>
                  <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Existing Categories" />
                  
                  <TableView fx:id="tblCategories" style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 5;" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colId" minWidth="80.0" prefWidth="80.0" text="ID" />
                        <TableColumn fx:id="colCategory" minWidth="200.0" prefWidth="300.0" text="Category Name" />
                        <TableColumn fx:id="colStock" minWidth="120.0" prefWidth="120.0" text="Stock Status" />
                        <TableColumn fx:id="colActions" minWidth="150.0" prefWidth="150.0" text="Actions" />
                     </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</VBox>