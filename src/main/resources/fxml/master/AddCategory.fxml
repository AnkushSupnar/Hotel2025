<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox styleClass="category-root" xmlns="http://javafx.com/javafx/19.0.2.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.frontend.controller.master.AddCategoryController">
   <stylesheets>
      <URL value="@../css/category-material.css" />
   </stylesheets>
   <children>
      <!-- Header with Back Button -->
      <HBox alignment="CENTER_LEFT" styleClass="category-header">
         <children>
            <!-- Back Button -->
            <Button fx:id="btnBack" styleClass="back-button">
               <graphic>
                  <HBox alignment="CENTER" spacing="8">
                     <children>
                        <FontAwesomeIcon glyphName="ARROW_LEFT" size="1.5em" styleClass="back-icon" />
                        <Label styleClass="back-text" text="BACK" />
                     </children>
                  </HBox>
               </graphic>
            </Button>

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- Title -->
            <Label styleClass="category-title" text="Category Management" />

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
      </HBox>

      <!-- Main Content - Split Layout -->
      <HBox styleClass="category-content" VBox.vgrow="ALWAYS">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <children>
            <!-- LEFT SECTION - Form -->
            <VBox spacing="25.0" styleClass="form-section">
               <HBox.margin>
                  <Insets right="15.0" />
               </HBox.margin>
               <children>
                  <!-- Form Header -->
                  <HBox alignment="CENTER_LEFT" spacing="12">
                     <children>
                        <FontAwesomeIcon fill="#667eea" glyphName="PLUS_CIRCLE" size="1.8em" />
                        <Label styleClass="form-section-title" text="Add New Category" />
                     </children>
                  </HBox>

                  <!-- Category Name Field -->
                  <VBox spacing="8">
                     <children>
                        <Label styleClass="input-label" text="CATEGORY NAME" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                           <children>
                              <FontAwesomeIcon fill="#7E57C2" glyphName="TAG" size="1.2em" styleClass="input-icon" />
                              <TextField fx:id="txtCategoryName" promptText="k^TogaIrIcao naava" styleClass="material-input" HBox.hgrow="ALWAYS">
                                 <font>
                                    <Font name="Kiran" size="25.0" />
                                 </font></TextField>
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Stock Status Field -->
                  <VBox spacing="8">
                     <children>
                        <Label styleClass="input-label" text="STOCK STATUS" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                           <children>
                              <FontAwesomeIcon fill="#7E57C2" glyphName="CUBES" size="1.2em" styleClass="input-icon" />
                              <HBox alignment="CENTER_LEFT" spacing="20" HBox.hgrow="ALWAYS">
                                 <children>
                                    <RadioButton fx:id="rbYes" selected="true" styleClass="material-radio" text="Yes" />
                                    <RadioButton fx:id="rbNo" styleClass="material-radio" text="No" />
                                 </children>
                              </HBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Purchase Status Field -->
                  <VBox spacing="8">
                     <children>
                        <Label styleClass="input-label" text="PURCHASE STATUS" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                           <children>
                              <FontAwesomeIcon fill="#7E57C2" glyphName="SHOPPING_CART" size="1.2em" styleClass="input-icon" />
                              <HBox alignment="CENTER_LEFT" spacing="20" HBox.hgrow="ALWAYS">
                                 <children>
                                    <RadioButton fx:id="rbPurchaseYes" styleClass="material-radio" text="Yes" />
                                    <RadioButton fx:id="rbPurchaseNo" selected="true" styleClass="material-radio" text="No" />
                                 </children>
                              </HBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Action Buttons -->
                  <VBox spacing="12">
                     <children>
                        <Button fx:id="btnSave" maxWidth="Infinity" styleClass="btn-primary-full" text="SAVE CATEGORY">
                           <graphic>
                              <FontAwesomeIcon fill="white" glyphName="SAVE" size="1.2em" />
                           </graphic>
                        </Button>
                        <Button fx:id="btnUpdate" managed="false" maxWidth="Infinity" styleClass="btn-warning-full" text="UPDATE CATEGORY" visible="false">
                           <graphic>
                              <FontAwesomeIcon fill="white" glyphName="EDIT" size="1.2em" />
                           </graphic>
                        </Button>
                        <Button fx:id="btnClear" maxWidth="Infinity" styleClass="btn-secondary-full" text="CLEAR FORM">
                           <graphic>
                              <FontAwesomeIcon fill="#667eea" glyphName="ERASER" size="1.2em" />
                           </graphic>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </VBox>

                  <!-- Spacer to push content to top -->
                  <Region VBox.vgrow="ALWAYS" />
               </children>
            </VBox>

            <!-- RIGHT SECTION - Data Table -->
            <VBox spacing="20.0" styleClass="table-section" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="15.0" />
               </HBox.margin>
               <children>
                  <!-- Table Header with Search -->
                  <VBox spacing="15">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="12">
                           <children>
                              <FontAwesomeIcon fill="#667eea" glyphName="LIST" size="1.8em" />
                              <Label styleClass="table-section-title" text="Existing Categories" />
                              <Region HBox.hgrow="ALWAYS" />
                              <Button fx:id="btnRefresh" styleClass="icon-button">
                                 <graphic>
                                    <FontAwesomeIcon fill="#667eea" glyphName="REFRESH" size="1.3em" />
                                 </graphic>
                              </Button>
                           </children>
                        </HBox>

                        <!-- Search Box -->
                        <HBox spacing="12">
                           <children>
                              <VBox spacing="8" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="search-label" text="Search by Name" />
                                    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="search-container">
                                       <children>
                                          <FontAwesomeIcon fill="#9e9e9e" glyphName="SEARCH" size="1.1em" styleClass="search-icon" />
                                          <TextField fx:id="txtSearch" promptText="k^TogaIrIcao naava" styleClass="search-input" HBox.hgrow="ALWAYS">
                                             <font>
                                                <Font name="Kiran" size="25.0" />
                                             </font></TextField>
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <VBox prefWidth="180" spacing="8">
                                 <children>
                                    <Label styleClass="search-label" text="Filter by Stock" />
                                    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="search-container">
                                       <children>
                                          <FontAwesomeIcon fill="#9e9e9e" glyphName="FILTER" size="1.1em" styleClass="search-icon" />
                                          <ComboBox fx:id="cmbFilterStock" maxWidth="Infinity" promptText="All Status" styleClass="filter-combo" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Table -->
                  <TableView fx:id="tblCategories" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colId" styleClass="id-column" text="ID" />
                        <TableColumn fx:id="colCategory" styleClass="category-name-column" text="Category Name" />
                        <TableColumn fx:id="colStock" styleClass="stock-column" text="Stock" />
                        <TableColumn fx:id="colPurchase" styleClass="stock-column" text="Purchase" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
