<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="item-root" xmlns="http://javafx.com/javafx/19.0.2.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.frontend.controller.master.AddCustomerController">
   <stylesheets>
      <URL value="@../css/item-material.css" />
   </stylesheets>
   <children>
      <!-- Header with Back Button -->
      <HBox alignment="CENTER_LEFT" styleClass="item-header">
         <children>
            <!-- Back Button -->
            <Button fx:id="btnBack" styleClass="back-button">
               <graphic>
                  <HBox alignment="CENTER" spacing="8">
                     <children>
                        <FontAwesomeIcon glyphName="ARROW_LEFT" size="1.5em" styleClass="back-icon" />
                        <Label styleClass="back-text" text="BACK" />
                     </children>
                  </HBox>
               </graphic>
            </Button>

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- Title -->
            <Label styleClass="item-title" text="Customer Management" />

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
      </HBox>

      <!-- Main Content - Split Layout -->
      <HBox styleClass="item-content" VBox.vgrow="ALWAYS">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <children>
            <!-- LEFT SECTION - Form with ScrollPane -->
            <VBox styleClass="form-section">
               <HBox.margin>
                  <Insets right="15.0" />
               </HBox.margin>
               <children>
                  <!-- Form Header -->
                  <HBox alignment="CENTER_LEFT" spacing="12">
                     <children>
                        <FontAwesomeIcon fill="#667eea" glyphName="PLUS_CIRCLE" size="1.8em" />
                        <Label styleClass="form-section-title" text="Add New Customer" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="15.0" />
                     </VBox.margin>
                  </HBox>

                  <!-- Scrollable Form Content -->
                  <ScrollPane fitToWidth="true" hbarPolicy="NEVER" pannable="false" styleClass="form-scroll-pane" VBox.vgrow="ALWAYS">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <content>
                        <VBox spacing="20.0">
                           <padding>
                              <Insets bottom="20.0" left="15.0" right="20.0" top="5.0" />
                           </padding>
                           <children>

                  <!-- Customer Key Field -->
                  <VBox spacing="8">
                     <children>
                        <Label styleClass="input-label" text="CUSTOMER KEY" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                           <children>
                              <FontAwesomeIcon fill="#7E57C2" glyphName="KEY" size="1.2em" styleClass="input-icon" />
                              <TextField fx:id="txtCustomerKey" promptText="Enter unique customer key" styleClass="material-input" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- First Name Field -->
                  <VBox spacing="8">
                     <children>
                        <Label styleClass="input-label" text="FIRST NAME" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                           <children>
                              <FontAwesomeIcon fill="#7E57C2" glyphName="USER" size="1.2em" styleClass="input-icon" />
                              <TextField fx:id="txtFirstName" promptText="pahIlao naava" styleClass="material-input" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Middle Name Field -->
                  <VBox spacing="8">
                     <children>
                        <Label styleClass="input-label" text="MIDDLE NAME" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                           <children>
                              <FontAwesomeIcon fill="#7E57C2" glyphName="USER" size="1.2em" styleClass="input-icon" />
                              <TextField fx:id="txtMiddleName" promptText="maQalao naava" styleClass="material-input" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Last Name Field -->
                  <VBox spacing="8">
                     <children>
                        <Label styleClass="input-label" text="LAST NAME" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                           <children>
                              <FontAwesomeIcon fill="#7E57C2" glyphName="USER" size="1.2em" styleClass="input-icon" />
                              <TextField fx:id="txtLastName" promptText="SaovaTcao naava" styleClass="material-input" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Mobile Number Field -->
                  <VBox spacing="8">
                     <children>
                        <Label styleClass="input-label" text="MOBILE NUMBER" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                           <children>
                              <FontAwesomeIcon fill="#7E57C2" glyphName="PHONE" size="1.2em" styleClass="input-icon" />
                              <TextField fx:id="txtMobileNo" promptText="Enter mobile number" styleClass="material-input" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Email Field -->
                  <VBox spacing="8">
                     <children>
                        <Label styleClass="input-label" text="EMAIL ADDRESS" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                           <children>
                              <FontAwesomeIcon fill="#7E57C2" glyphName="ENVELOPE" size="1.2em" styleClass="input-icon" />
                              <TextField fx:id="txtEmailId" promptText="Enter email address" styleClass="material-input" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Flat No Field -->
                  <VBox spacing="8">
                     <children>
                        <Label styleClass="input-label" text="FLAT/HOUSE NO" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                           <children>
                              <FontAwesomeIcon fill="#7E57C2" glyphName="HOME" size="1.2em" styleClass="input-icon" />
                              <TextField fx:id="txtFlatNo" promptText="Enter flat/house number" styleClass="material-input" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Street Name Field -->
                  <VBox spacing="8">
                     <children>
                        <Label styleClass="input-label" text="STREET NAME" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                           <children>
                              <FontAwesomeIcon fill="#7E57C2" glyphName="ROAD" size="1.2em" styleClass="input-icon" />
                              <TextField fx:id="txtStreetName" promptText="rstyaacao naava" styleClass="material-input" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- City Field -->
                  <VBox spacing="8">
                     <children>
                        <Label styleClass="input-label" text="CITY" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                           <children>
                              <FontAwesomeIcon fill="#7E57C2" glyphName="BUILDING" size="1.2em" styleClass="input-icon" />
                              <TextField fx:id="txtCity" promptText="Sahracao naava" styleClass="material-input" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- District Field -->
                  <VBox spacing="8">
                     <children>
                        <Label styleClass="input-label" text="DISTRICT" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                           <children>
                              <FontAwesomeIcon fill="#7E57C2" glyphName="MAP_MARKER" size="1.2em" styleClass="input-icon" />
                              <TextField fx:id="txtDistrict" promptText="ijalha naava" styleClass="material-input" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Taluka Field -->
                  <VBox spacing="8">
                     <children>
                        <Label styleClass="input-label" text="TALUKA" />
                        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                           <children>
                              <FontAwesomeIcon fill="#7E57C2" glyphName="MAP_PIN" size="1.2em" styleClass="input-icon" />
                              <TextField fx:id="txtTaluka" promptText="taalauka naava" styleClass="material-input" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                              <!-- Action Buttons -->
                              <VBox spacing="12">
                                 <children>
                                    <Button fx:id="btnSave" maxWidth="Infinity" styleClass="btn-primary-full" text="SAVE CUSTOMER">
                                       <graphic>
                                          <FontAwesomeIcon fill="white" glyphName="SAVE" size="1.2em" />
                                       </graphic>
                                    </Button>
                                    <Button fx:id="btnUpdate" managed="false" maxWidth="Infinity" styleClass="btn-warning-full" text="UPDATE CUSTOMER" visible="false">
                                       <graphic>
                                          <FontAwesomeIcon fill="white" glyphName="EDIT" size="1.2em" />
                                       </graphic>
                                    </Button>
                                    <Button fx:id="btnClear" maxWidth="Infinity" styleClass="btn-secondary-full" text="CLEAR FORM">
                                       <graphic>
                                          <FontAwesomeIcon fill="#667eea" glyphName="ERASER" size="1.2em" />
                                       </graphic>
                                    </Button>
                                 </children>
                                 <VBox.margin>
                                    <Insets top="10.0" />
                                 </VBox.margin>
                              </VBox>

                           </children>
                        </VBox>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>

            <!-- RIGHT SECTION - Data Table -->
            <VBox spacing="20.0" styleClass="table-section" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="15.0" />
               </HBox.margin>
               <children>
                  <!-- Table Header with Search -->
                  <VBox spacing="15">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="12">
                           <children>
                              <FontAwesomeIcon fill="#667eea" glyphName="LIST" size="1.8em" />
                              <Label styleClass="table-section-title" text="Existing Customers" />
                              <Region HBox.hgrow="ALWAYS" />
                              <Button fx:id="btnRefresh" styleClass="icon-button">
                                 <graphic>
                                    <FontAwesomeIcon fill="#667eea" glyphName="REFRESH" size="1.3em" />
                                 </graphic>
                              </Button>
                           </children>
                        </HBox>

                        <!-- Search Box -->
                        <HBox spacing="12">
                           <children>
                              <VBox spacing="8" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="search-label" text="Search by Name or Mobile" />
                                    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="search-container">
                                       <children>
                                          <FontAwesomeIcon fill="#9e9e9e" glyphName="SEARCH" size="1.1em" styleClass="search-icon" />
                                          <TextField fx:id="txtSearch" promptText="Search customers..." styleClass="search-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Table -->
                  <TableView fx:id="tblCustomers" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colId" maxWidth="50" minWidth="50" prefWidth="50" styleClass="id-column" text="ID" />
                        <TableColumn fx:id="colCustomerKey" prefWidth="110" text="Customer Key" />
                        <TableColumn fx:id="colFullName" prefWidth="280" text="Full Name" />
                        <TableColumn fx:id="colMobileNo" prefWidth="120" text="Mobile" />
                        <TableColumn fx:id="colEmailId" prefWidth="170" text="Email" />
                        <TableColumn fx:id="colCity" prefWidth="75" text="City" />
                        <TableColumn fx:id="colDistrict" prefWidth="75" text="District" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
