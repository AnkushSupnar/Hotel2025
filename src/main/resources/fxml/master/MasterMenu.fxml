<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="master-menu-root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.frontend.controller.master.MasterMenuController">
   <stylesheets>
      <URL value="@../css/master-material.css" />
   </stylesheets>
   <children>
      <!-- Header with Back Button -->
      <HBox alignment="CENTER_LEFT" styleClass="master-header">
         <children>
            <!-- Back Button -->
            <Button fx:id="btnBack" styleClass="back-button">
               <graphic>
                  <HBox alignment="CENTER" spacing="8">
                     <children>
                        <FontAwesomeIcon glyphName="ARROW_LEFT" size="1.5em" styleClass="back-icon" />
                        <Label styleClass="back-text" text="BACK" />
                     </children>
                  </HBox>
               </graphic>
            </Button>

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- Title -->
            <Label styleClass="master-title" text="Master Data Management" />

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
      </HBox>

      <!-- Scrollable Content Area with Cards -->
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
         <content>
            <VBox spacing="25.0" styleClass="master-content">
               <padding>
                  <Insets bottom="40.0" left="40.0" right="40.0" top="30.0" />
               </padding>
               <children>

                  <!-- First Row of Cards -->
                  <HBox alignment="CENTER" spacing="25.0">
                     <children>
                        <!-- Category Management Card -->
                        <StackPane fx:id="categoryCard" styleClass="master-card, category-card" HBox.hgrow="ALWAYS">
                           <children>
                              <VBox alignment="CENTER" spacing="15.0">
                                 <children>
                                    <StackPane styleClass="card-icon-container, category-icon-bg">
                                       <children>
                                          <FontAwesomeIcon fill="#E91E63" glyphName="SITEMAP" size="2.5em" styleClass="card-icon" />
                                       </children>
                                    </StackPane>
                                    <Label fx:id="lblCategoryTitle" styleClass="card-title" text="k^TogaIrI maasTr" />
                                    <Label styleClass="card-description" text="Manage food categories and menu sections" textAlignment="CENTER" />
                                 </children>
                              </VBox>
                           </children>
                        </StackPane>

                        <!-- Item Management Card -->
                        <StackPane fx:id="itemCard" styleClass="master-card, item-card" HBox.hgrow="ALWAYS">
                           <children>
                              <VBox alignment="CENTER" spacing="15.0">
                                 <children>
                                    <StackPane styleClass="card-icon-container, item-icon-bg">
                                       <children>
                                          <FontAwesomeIcon fill="#FF9800" glyphName="CUTLERY" size="2.5em" styleClass="card-icon" />
                                       </children>
                                    </StackPane>
                                    <Label fx:id="lblItemTitle" styleClass="card-title" text="AayaTma maasTr" />
                                    <Label styleClass="card-description" text="Manage menu items and dishes" textAlignment="CENTER" />
                                 </children>
                              </VBox>
                           </children>
                        </StackPane>

                        <!-- Table Management Card -->
                        <StackPane fx:id="tableCard" styleClass="master-card, table-card" HBox.hgrow="ALWAYS">
                           <children>
                              <VBox alignment="CENTER" spacing="15.0">
                                 <children>
                                    <StackPane styleClass="card-icon-container, table-icon-bg">
                                       <children>
                                          <FontAwesomeIcon fill="#F44336" glyphName="TABLE" size="2.5em" styleClass="card-icon" />
                                       </children>
                                    </StackPane>
                                    <Label fx:id="lblTableTitle" styleClass="card-title" text="Tobala maasTr" />
                                    <Label styleClass="card-description" text="Manage restaurant tables" textAlignment="CENTER" />
                                 </children>
                              </VBox>
                           </children>
                        </StackPane>
                     </children>
                  </HBox>

                  <!-- Second Row of Cards -->
                  <HBox alignment="CENTER" spacing="25.0">
                     <children>
                        <!-- Customer Management Card -->
                        <StackPane fx:id="customerCard" styleClass="master-card, customer-card" HBox.hgrow="ALWAYS">
                           <children>
                              <VBox alignment="CENTER" spacing="15.0">
                                 <children>
                                    <StackPane styleClass="card-icon-container, customer-icon-bg">
                                       <children>
                                          <FontAwesomeIcon fill="#4CAF50" glyphName="USERS" size="2.5em" styleClass="card-icon" />
                                       </children>
                                    </StackPane>
                                    <Label fx:id="lblCustomerTitle" styleClass="card-title" text="ksTmar maasTr" />
                                    <Label styleClass="card-description" text="Manage customer information" textAlignment="CENTER" />
                                 </children>
                              </VBox>
                           </children>
                        </StackPane>

                        <!-- Employee Management Card -->
                        <StackPane fx:id="employeeCard" styleClass="master-card, employee-card" HBox.hgrow="ALWAYS">
                           <children>
                              <VBox alignment="CENTER" spacing="15.0">
                                 <children>
                                    <StackPane styleClass="card-icon-container, employee-icon-bg">
                                       <children>
                                          <FontAwesomeIcon fill="#9C27B0" glyphName="USER_CIRCLE" size="2.5em" styleClass="card-icon" />
                                       </children>
                                    </StackPane>
                                    <Label fx:id="lblEmployeeTitle" styleClass="card-title" text="kamagaar maasTr" />
                                    <Label styleClass="card-description" text="Manage employee records" textAlignment="CENTER" />
                                 </children>
                              </VBox>
                           </children>
                        </StackPane>

                        <!-- Supplier Management Card -->
                        <StackPane fx:id="supplierCard" styleClass="master-card, supplier-card" HBox.hgrow="ALWAYS">
                           <children>
                              <VBox alignment="CENTER" spacing="15.0">
                                 <children>
                                    <StackPane styleClass="card-icon-container, supplier-icon-bg">
                                       <children>
                                          <FontAwesomeIcon fill="#2196F3" glyphName="TRUCK" size="2.5em" styleClass="card-icon" />
                                       </children>
                                    </StackPane>
                                    <Label fx:id="lblSupplierTitle" styleClass="card-title" text="paurvazadar maasTr" />
                                    <Label styleClass="card-description" text="Manage supplier details" textAlignment="CENTER" />
                                 </children>
                              </VBox>
                           </children>
                        </StackPane>

                        <!-- User Management Card -->
                        <StackPane fx:id="userCard" styleClass="master-card, user-card" HBox.hgrow="ALWAYS">
                           <children>
                              <VBox alignment="CENTER" spacing="15.0">
                                 <children>
                                    <StackPane styleClass="card-icon-container, user-icon-bg">
                                       <children>
                                          <FontAwesomeIcon fill="#00BCD4" glyphName="USER_PLUS" size="2.5em" styleClass="card-icon" />
                                       </children>
                                    </StackPane>
                                    <Label fx:id="lblUserTitle" styleClass="card-title" text="yaujar maasTr" />
                                    <Label styleClass="card-description" text="Manage system users and access" textAlignment="CENTER" />
                                 </children>
                              </VBox>
                           </children>
                        </StackPane>
                     </children>
                  </HBox>

                  <!-- Third Row of Cards -->
                  <HBox alignment="CENTER_LEFT" spacing="25.0">
                     <children>
                        <!-- Bank Management Card -->
                        <StackPane fx:id="bankCard" prefWidth="280" styleClass="master-card, bank-card">
                           <children>
                              <VBox alignment="CENTER" spacing="15.0">
                                 <children>
                                    <StackPane styleClass="card-icon-container, bank-icon-bg">
                                       <children>
                                          <FontAwesomeIcon fill="#607D8B" glyphName="BANK" size="2.5em" styleClass="card-icon" />
                                       </children>
                                    </StackPane>
                                    <Label fx:id="lblBankTitle" styleClass="card-title" text="ba^Mk maasTr" />
                                    <Label styleClass="card-description" text="Manage bank accounts" textAlignment="CENTER" />
                                 </children>
                              </VBox>
                           </children>
                        </StackPane>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</VBox>
