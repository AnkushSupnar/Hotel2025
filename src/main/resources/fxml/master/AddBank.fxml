<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="category-root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.frontend.controller.master.AddBankController">
   <stylesheets>
      <URL value="@../css/category-material.css" />
   </stylesheets>
   <children>
      <!-- Header with Back Button -->
      <HBox alignment="CENTER_LEFT" styleClass="category-header">
         <children>
            <!-- Back Button -->
            <Button fx:id="btnBack" styleClass="back-button">
               <graphic>
                  <HBox alignment="CENTER" spacing="8">
                     <children>
                        <FontAwesomeIcon glyphName="ARROW_LEFT" size="1.5em" styleClass="back-icon" />
                        <Label styleClass="back-text" text="BACK" />
                     </children>
                  </HBox>
               </graphic>
            </Button>

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- Title -->
            <Label styleClass="category-title" text="Bank Management" />

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
      </HBox>

      <!-- Main Content - Split Layout with ScrollPane -->
      <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
         <content>
            <HBox styleClass="category-content">
               <padding>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
               </padding>
               <children>
                  <!-- LEFT SECTION - Form with ScrollPane -->
                  <ScrollPane fitToWidth="true" hbarPolicy="NEVER" minWidth="420" prefWidth="420" style="-fx-background-color: transparent; -fx-background: transparent;" vbarPolicy="AS_NEEDED">
                     <HBox.margin>
                        <Insets right="15.0" />
                     </HBox.margin>
                     <content>
                        <VBox spacing="15.0" styleClass="form-section">
                           <padding>
                              <Insets bottom="20.0" left="15.0" right="15.0" top="5.0" />
                           </padding>
                           <children>
                              <!-- Form Header -->
                              <HBox alignment="CENTER_LEFT" spacing="12">
                                 <children>
                                    <FontAwesomeIcon fill="#667eea" glyphName="PLUS_CIRCLE" size="1.8em" />
                                    <Label styleClass="form-section-title" text="Add New Bank" />
                                 </children>
                              </HBox>

                              <!-- Bank Name Field -->
                              <VBox spacing="5">
                                 <children>
                                    <Label styleClass="input-label" text="BANK NAME *" />
                                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                       <children>
                                          <FontAwesomeIcon fill="#7E57C2" glyphName="BANK" size="1.2em" styleClass="input-icon" />
                                          <TextField fx:id="txtBankName" promptText="ba^Mkocao naava" styleClass="material-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- Account Number Field -->
                              <VBox spacing="5">
                                 <children>
                                    <Label styleClass="input-label" text="ACCOUNT NUMBER *" />
                                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                       <children>
                                          <FontAwesomeIcon fill="#7E57C2" glyphName="CREDIT_CARD" size="1.2em" styleClass="input-icon" />
                                          <TextField fx:id="txtAccountNo" promptText="Enter account number" styleClass="material-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- Account Type and IFSC in one row -->
                              <HBox spacing="15">
                                 <children>
                                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label styleClass="input-label" text="ACCOUNT TYPE" />
                                          <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                             <children>
                                                <ComboBox fx:id="cmbAccountType" maxWidth="Infinity" promptText="Select type" styleClass="material-combo" HBox.hgrow="ALWAYS" />
                                             </children>
                                          </HBox>
                                       </children>
                                    </VBox>
                                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label styleClass="input-label" text="IFSC CODE" />
                                          <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                             <children>
                                                <TextField fx:id="txtIfsc" promptText="IFSC code" styleClass="material-input" HBox.hgrow="ALWAYS" />
                                             </children>
                                          </HBox>
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>

                              <!-- Branch Name Field -->
                              <VBox spacing="5">
                                 <children>
                                    <Label styleClass="input-label" text="BRANCH NAME" />
                                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                       <children>
                                          <FontAwesomeIcon fill="#7E57C2" glyphName="MAP_MARKER" size="1.2em" styleClass="input-icon" />
                                          <TextField fx:id="txtBranchName" promptText="SaaKaocao naava" styleClass="material-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- Person Name Field -->
                              <VBox spacing="5">
                                 <children>
                                    <Label styleClass="input-label" text="ACCOUNT HOLDER NAME" />
                                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                       <children>
                                          <FontAwesomeIcon fill="#7E57C2" glyphName="USER" size="1.2em" styleClass="input-icon" />
                                          <TextField fx:id="txtPersonName" promptText="Kaataodaracao naava" styleClass="material-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- Contact Number Field -->
                              <VBox spacing="5">
                                 <children>
                                    <Label styleClass="input-label" text="CONTACT NUMBER" />
                                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                       <children>
                                          <FontAwesomeIcon fill="#7E57C2" glyphName="PHONE" size="1.2em" styleClass="input-icon" />
                                          <TextField fx:id="txtContactNo" promptText="Enter contact number" styleClass="material-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- UPI ID Field -->
                              <VBox spacing="5">
                                 <children>
                                    <Label styleClass="input-label" text="UPI ID" />
                                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                       <children>
                                          <FontAwesomeIcon fill="#7E57C2" glyphName="MOBILE" size="1.2em" styleClass="input-icon" />
                                          <TextField fx:id="txtUpiId" promptText="Enter UPI ID (e.g., name@upi)" styleClass="material-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- Bank Address Field -->
                              <VBox spacing="5">
                                 <children>
                                    <Label styleClass="input-label" text="BANK ADDRESS" />
                                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                       <children>
                                          <FontAwesomeIcon fill="#7E57C2" glyphName="HOME" size="1.2em" styleClass="input-icon" />
                                          <TextField fx:id="txtBankAddress" promptText="ba^Mk  pattaa" styleClass="material-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- Opening Balance Field -->
                              <VBox spacing="5">
                                 <children>
                                    <Label styleClass="input-label" text="OPENING BALANCE" />
                                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                       <children>
                                          <FontAwesomeIcon fill="#7E57C2" glyphName="MONEY" size="1.2em" styleClass="input-icon" />
                                          <TextField fx:id="txtBankBalance" promptText="0.00" styleClass="material-input" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- Bank Status Field -->
                              <VBox spacing="5">
                                 <children>
                                    <Label styleClass="input-label" text="BANK STATUS" />
                                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                       <children>
                                          <FontAwesomeIcon fill="#7E57C2" glyphName="CHECK_CIRCLE" size="1.2em" styleClass="input-icon" />
                                          <ComboBox fx:id="cmbBankStatus" maxWidth="Infinity" promptText="Select status" styleClass="material-combo" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- Action Buttons -->
                              <VBox spacing="12">
                                 <children>
                                    <Button fx:id="btnSave" maxWidth="Infinity" styleClass="btn-primary-full" text="SAVE BANK">
                                       <graphic>
                                          <FontAwesomeIcon fill="white" glyphName="SAVE" size="1.2em" />
                                       </graphic>
                                    </Button>
                                    <Button fx:id="btnUpdate" managed="false" maxWidth="Infinity" styleClass="btn-warning-full" text="UPDATE BANK" visible="false">
                                       <graphic>
                                          <FontAwesomeIcon fill="white" glyphName="EDIT" size="1.2em" />
                                       </graphic>
                                    </Button>
                                    <Button fx:id="btnClear" maxWidth="Infinity" styleClass="btn-secondary-full" text="CLEAR FORM">
                                       <graphic>
                                          <FontAwesomeIcon fill="#667eea" glyphName="ERASER" size="1.2em" />
                                       </graphic>
                                    </Button>
                                 </children>
                                 <VBox.margin>
                                    <Insets top="10.0" />
                                 </VBox.margin>
                              </VBox>
                           </children>
                        </VBox>
                     </content>
                  </ScrollPane>

                  <!-- RIGHT SECTION - Data Table -->
                  <VBox spacing="20.0" styleClass="table-section" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="15.0" />
                     </HBox.margin>
                     <children>
                        <!-- Table Header with Search -->
                        <VBox spacing="15">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="12">
                                 <children>
                                    <FontAwesomeIcon fill="#667eea" glyphName="LIST" size="1.8em" />
                                    <Label styleClass="table-section-title" text="Existing Banks" />
                                    <Region HBox.hgrow="ALWAYS" />
                                    <Button fx:id="btnRefresh" styleClass="icon-button">
                                       <graphic>
                                          <FontAwesomeIcon fill="#667eea" glyphName="REFRESH" size="1.3em" />
                                       </graphic>
                                    </Button>
                                 </children>
                              </HBox>

                              <!-- Search Box -->
                              <HBox spacing="12">
                                 <children>
                                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label styleClass="search-label" text="Search by Bank Name" />
                                          <HBox alignment="CENTER_LEFT" spacing="10" styleClass="search-container">
                                             <children>
                                                <FontAwesomeIcon fill="#9e9e9e" glyphName="SEARCH" size="1.1em" styleClass="search-icon" />
                                                <TextField fx:id="txtSearch" promptText="ba^Mk naavaanao SaaoQaa" styleClass="search-input" HBox.hgrow="ALWAYS" />
                                             </children>
                                          </HBox>
                                       </children>
                                    </VBox>

                                    <VBox prefWidth="180" spacing="8">
                                       <children>
                                          <Label styleClass="search-label" text="Filter by Status" />
                                          <HBox alignment="CENTER_LEFT" spacing="10" styleClass="search-container">
                                             <children>
                                                <FontAwesomeIcon fill="#9e9e9e" glyphName="FILTER" size="1.1em" styleClass="search-icon" />
                                                <ComboBox fx:id="cmbFilterStatus" maxWidth="Infinity" promptText="All Status" styleClass="filter-combo" HBox.hgrow="ALWAYS" />
                                             </children>
                                          </HBox>
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>

                        <!-- Table -->
                        <TableView fx:id="tblBanks" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="colId" prefWidth="50" styleClass="id-column" text="ID" />
                              <TableColumn fx:id="colBankName" prefWidth="150" text="Bank Name" />
                              <TableColumn fx:id="colAccountNo" prefWidth="120" text="Account No" />
                              <TableColumn fx:id="colAccountType" prefWidth="70" text="Type" />
                              <TableColumn fx:id="colBranch" prefWidth="100" text="Branch" />
                              <TableColumn fx:id="colUpiId" prefWidth="120" text="UPI ID" />
                              <TableColumn fx:id="colBalance" prefWidth="90" text="Balance" />
                              <TableColumn fx:id="colStatus" prefWidth="80" text="Status" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </content>
      </ScrollPane>
   </children>
</VBox>
