<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="item-root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.frontend.controller.employee.EmployeeSalaryController">
   <stylesheets>
      <URL value="@../css/employee-salary.css" />
   </stylesheets>
   <children>

      <!-- Header Bar -->
      <HBox alignment="CENTER_LEFT" styleClass="item-header">
         <children>
            <Button fx:id="btnBack" styleClass="back-button">
               <graphic>
                  <HBox alignment="CENTER" spacing="8">
                     <children>
                        <FontAwesomeIcon glyphName="ARROW_LEFT" size="1.5em" styleClass="back-icon" />
                        <Label styleClass="back-text" text="BACK" />
                     </children>
                  </HBox>
               </graphic>
            </Button>

            <Region HBox.hgrow="ALWAYS" />

            <HBox alignment="CENTER" spacing="10">
               <children>
                  <FontAwesomeIcon fill="white" glyphName="MONEY" size="1.8em" />
                  <Label styleClass="item-title" text="Employee Salary" />
               </children>
            </HBox>

            <Region HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="15.0" left="25.0" right="25.0" top="15.0" />
         </padding>
      </HBox>

      <!-- Month Selection + Summary Bar -->
      <HBox alignment="CENTER_LEFT" spacing="20">
         <padding>
            <Insets bottom="10.0" left="25.0" right="25.0" top="15.0" />
         </padding>
         <children>
            <!-- Month/Year Selection -->
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="date-section">
               <children>
                  <FontAwesomeIcon fill="#667eea" glyphName="CALENDAR" size="1.3em" />
                  <Label text="Month:" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                  <ComboBox fx:id="cmbMonth" prefWidth="140" />
                  <Label text="Year:" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                  <ComboBox fx:id="cmbYear" prefWidth="100" />
                  <Button fx:id="btnLoad" styleClass="btn-secondary" text="LOAD">
                     <graphic>
                        <FontAwesomeIcon fill="white" glyphName="REFRESH" size="1em" />
                     </graphic>
                  </Button>
               </children>
            </HBox>

            <Region HBox.hgrow="ALWAYS" />

            <!-- Summary Bar -->
            <HBox alignment="CENTER" spacing="5" styleClass="summary-bar">
               <children>
                  <VBox alignment="CENTER" styleClass="summary-item">
                     <children>
                        <Label styleClass="summary-label" text="Total Emp" />
                        <Label fx:id="lblTotalEmployees" styleClass="summary-value" text="0" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" styleClass="summary-item">
                     <children>
                        <Label styleClass="summary-label" text="Paid" />
                        <Label fx:id="lblPaidCount" styleClass="present-value" text="0" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" styleClass="summary-item">
                     <children>
                        <Label styleClass="summary-label" text="Pending" />
                        <Label fx:id="lblPendingCount" styleClass="absent-value" text="0" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" styleClass="summary-item">
                     <children>
                        <Label styleClass="summary-label" text="Total Payable" />
                        <Label fx:id="lblTotalPayable" styleClass="salary-value" text="0.00" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </HBox>

      <!-- Table View -->
      <TableView fx:id="tblSalary" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
         </VBox.margin>
         <columns>
            <TableColumn fx:id="colId" text="ID" minWidth="50" />
            <TableColumn fx:id="colEmployeeName" text="Employee Name" minWidth="170" />
            <TableColumn fx:id="colDesignation" text="Designation" minWidth="110" />
            <TableColumn fx:id="colMonthlySalary" text="Monthly Salary" minWidth="110" />
            <TableColumn fx:id="colTotalDays" text="Days" minWidth="50" />
            <TableColumn fx:id="colAbsentDays" text="Absent" minWidth="60" />
            <TableColumn fx:id="colPresentDays" text="Present" minWidth="60" />
            <TableColumn fx:id="colCalculatedSalary" text="Payable Salary" minWidth="120" />
            <TableColumn fx:id="colStatus" text="Status" minWidth="80" />
            <TableColumn fx:id="colAction" text="Action" minWidth="120" />
         </columns>
      </TableView>

      <!-- Pay All Button -->
      <HBox alignment="CENTER_RIGHT" spacing="15">
         <padding>
            <Insets bottom="15.0" left="25.0" right="25.0" top="5.0" />
         </padding>
         <children>
            <Button fx:id="btnPayAll" styleClass="btn-primary" text="PAY ALL PENDING">
               <graphic>
                  <FontAwesomeIcon fill="white" glyphName="CHECK_CIRCLE" size="1.2em" />
               </graphic>
            </Button>
         </children>
      </HBox>

   </children>
</VBox>
