<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="500.0" minWidth="800.0" styleClass="login-root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.frontend.controller.LoginController">
    <stylesheets>
        <URL value="@../css/Login.css" />
    </stylesheets>

    <!-- Full Screen Container -->
    <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <!-- Main Content - Two Panel Layout -->
        <HBox alignment="CENTER" spacing="0" HBox.hgrow="ALWAYS">

            <!-- Left Panel - Brand Section with Gradient -->
            <VBox alignment="CENTER" minWidth="350.0" styleClass="brand-panel" HBox.hgrow="ALWAYS">
                <VBox alignment="CENTER" spacing="40" styleClass="brand-content">

                    <!-- Logo Container -->
                    <StackPane styleClass="logo-container">
                        <VBox alignment="CENTER" styleClass="logo-circle">
                            <FontAwesomeIcon fill="#FFFFFF" glyphName="CUTLERY" size="3.5em" />
                        </VBox>
                    </StackPane>

                    <!-- Brand Text -->
                    <VBox alignment="CENTER" spacing="12">
                        <Label style="-fx-text-fill: white;" styleClass="brand-title" text="Hotel Management" />
                        <Label style="-fx-text-fill: white;" styleClass="brand-subtitle" text="Complete Restaurant &amp; Hotel Solution" />
                    </VBox>

                    <!-- Feature List -->
                    <VBox spacing="18" styleClass="features-list">
                        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="feature-item">
                            <StackPane styleClass="feature-icon-box">
                                <FontAwesomeIcon fill="#FFFFFF" glyphName="CHECK" size="0.9em" />
                            </StackPane>
                            <Label style="-fx-text-fill: white;" styleClass="feature-text" text="Smart Billing &amp; Invoicing" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="feature-item">
                            <StackPane styleClass="feature-icon-box">
                                <FontAwesomeIcon fill="#FFFFFF" glyphName="CHECK" size="0.9em" />
                            </StackPane>
                            <Label style="-fx-text-fill: white;" styleClass="feature-text" text="Real-time Inventory Management" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="feature-item">
                            <StackPane styleClass="feature-icon-box">
                                <FontAwesomeIcon fill="#FFFFFF" glyphName="CHECK" size="0.9em" />
                            </StackPane>
                            <Label style="-fx-text-fill: white;" styleClass="feature-text" text="Detailed Reports &amp; Analytics" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="feature-item">
                            <StackPane styleClass="feature-icon-box">
                                <FontAwesomeIcon fill="#FFFFFF" glyphName="CHECK" size="0.9em" />
                            </StackPane>
                            <Label style="-fx-text-fill: white;" styleClass="feature-text" text="Multi-user Role Management" />
                        </HBox>
                    </VBox>

                    <!-- Version Info -->
                    <Label style="-fx-text-fill: white;" styleClass="version-text" text="Version 2.0" />
                </VBox>
            </VBox>

            <!-- Right Panel - Login Form -->
            <VBox alignment="CENTER" minWidth="400.0" styleClass="form-panel" HBox.hgrow="ALWAYS">

                <!-- Login Card -->
                <VBox maxWidth="420" spacing="0" styleClass="login-card">

                    <!-- Card Header -->
                    <VBox alignment="CENTER" spacing="8" styleClass="card-header">
                        <StackPane styleClass="header-icon-container">
                            <FontAwesomeIcon fill="#1976D2" glyphName="SIGN_IN" size="1.8em" />
                        </StackPane>
                        <Label styleClass="welcome-title" text="Welcome Back" />
                        <Label styleClass="welcome-subtitle" text="Sign in to continue to your dashboard" />
                    </VBox>

                    <!-- Form Body -->
                    <VBox spacing="20" styleClass="card-body">

                        <!-- Restaurant Selection -->
                        <VBox spacing="6" styleClass="form-group">
                            <HBox alignment="CENTER_LEFT" spacing="6">
                                <FontAwesomeIcon fill="#1976D2" glyphName="BUILDING" size="0.85em" />
                                <Label styleClass="input-label" text="Restaurant" />
                            </HBox>
                            <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                <FontAwesomeIcon fill="#90CAF9" glyphName="HOME" size="1.2em" styleClass="field-icon" />
                                <ComboBox fx:id="cmbShop" maxWidth="Infinity" styleClass="material-combo" HBox.hgrow="ALWAYS" />
                            </HBox>
                        </VBox>

                        <!-- Username Field -->
                        <VBox spacing="6" styleClass="form-group">
                            <HBox alignment="CENTER_LEFT" spacing="6">
                                <FontAwesomeIcon fill="#1976D2" glyphName="USER" size="0.85em" />
                                <Label styleClass="input-label" text="Username" />
                            </HBox>
                            <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                <FontAwesomeIcon fill="#90CAF9" glyphName="USER" size="1.2em" styleClass="field-icon" />
                                <TextField fx:id="txtUserName" promptText="yaujar inavaDa" styleClass="material-input" HBox.hgrow="ALWAYS">
                           <font>
                              <Font name="Kiran" size="20.0" />
                           </font></TextField>
                            </HBox>
                        </VBox>

                        <!-- Password Field -->
                        <VBox spacing="6" styleClass="form-group">
                            <HBox alignment="CENTER_LEFT" spacing="6">
                                <FontAwesomeIcon fill="#1976D2" glyphName="LOCK" size="0.85em" />
                                <Label styleClass="input-label" text="Password" />
                            </HBox>
                            <HBox alignment="CENTER_LEFT" spacing="12" styleClass="input-container">
                                <FontAwesomeIcon fill="#90CAF9" glyphName="KEY" size="1.2em" styleClass="field-icon" />
                                <PasswordField fx:id="txtPassword" promptText="paasavaD- Taka" styleClass="material-input" HBox.hgrow="ALWAYS">
                           <font>
                              <Font name="Kiran" size="20.0" />
                           </font></PasswordField>
                            </HBox>
                        </VBox>

                        <!-- Hidden Server URL Field (preserved for compatibility) -->
                        <TextField fx:id="txtServerUrl" managed="false" visible="false" />

                        <!-- Action Buttons -->
                        <VBox spacing="12" styleClass="button-section">
                            <padding>
                                <Insets top="10" />
                            </padding>

                            <!-- Login Button -->
                            <Button fx:id="btnLogin" maxWidth="Infinity" styleClass="btn-primary">
                                <graphic>
                                    <HBox alignment="CENTER" spacing="10">
                                        <FontAwesomeIcon fill="#FFFFFF" glyphName="SIGN_IN" size="1.1em" />
                                        <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;" text="SIGN IN" />
                                    </HBox>
                                </graphic>
                            </Button>

                            <!-- Cancel Button -->
                            <Button fx:id="btnCancel" maxWidth="Infinity" styleClass="btn-secondary">
                                <graphic>
                                    <HBox alignment="CENTER" spacing="10">
                                        <FontAwesomeIcon fill="#757575" glyphName="TIMES" size="1.1em" />
                                        <Label style="-fx-text-fill: #757575; -fx-font-weight: 600; -fx-font-size: 13px;" text="CANCEL" />
                                    </HBox>
                                </graphic>
                            </Button>
                        </VBox>
                    </VBox>

                    <!-- Card Footer -->
                    <VBox alignment="CENTER" spacing="8" styleClass="card-footer">
                        <!-- Support text - shown when users exist -->
                        <HBox alignment="CENTER" spacing="8">
                            <FontAwesomeIcon fill="#9E9E9E" glyphName="QUESTION_CIRCLE" size="1em" />
                            <Label fx:id="lblSupport" styleClass="footer-text" text="Need help? Contact support" />
                        </HBox>

                        <!-- Registration link - shown when no users exist (first-time setup) -->
                        <HBox alignment="CENTER" spacing="8">
                            <FontAwesomeIcon fill="#1976D2" glyphName="PLUS_CIRCLE" size="1em" />
                            <Hyperlink fx:id="linkRegister" managed="false" styleClass="register-link" text="Register your restaurant" visible="false" />
                        </HBox>
                    </VBox>

                </VBox>

                <!-- Copyright -->
                <Label styleClass="copyright-text" text="Â© 2025 Hotel Management System. All rights reserved.">
                    <VBox.margin>
                        <Insets top="30" />
                    </VBox.margin>
                </Label>
            </VBox>
        </HBox>
    </StackPane>
</AnchorPane>
