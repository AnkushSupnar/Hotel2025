<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox styleClass="master-menu-root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.frontend.controller.report.PayReceiptReportController">
   <stylesheets>
      <URL value="@../css/master-material.css" />
      <URL value="@../css/purchase-report.css" />
   </stylesheets>
   <children>
      <!-- Header with Back Button -->
      <HBox alignment="CENTER_LEFT" styleClass="master-header, purchase-header">
         <children>
            <!-- Back Button -->
            <Button fx:id="btnBack" styleClass="back-button">
               <graphic>
                  <HBox alignment="CENTER" spacing="8">
                     <children>
                        <FontAwesomeIcon glyphName="ARROW_LEFT" size="1.5em" styleClass="back-icon" />
                        <Label styleClass="back-text" text="BACK" />
                     </children>
                  </HBox>
               </graphic>
            </Button>

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- Title -->
            <HBox alignment="CENTER" spacing="10">
               <FontAwesomeIcon fill="white" glyphName="CREDIT_CARD" size="1.5em" />
               <Label styleClass="master-title" text="Pay Receipt Report" />
            </HBox>

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- Refresh Button -->
            <Button fx:id="btnRefresh" styleClass="back-button">
               <graphic>
                  <HBox alignment="CENTER" spacing="8">
                     <children>
                        <FontAwesomeIcon glyphName="REFRESH" size="1.5em" styleClass="back-icon" />
                        <Label styleClass="back-text" text="REFRESH" />
                     </children>
                  </HBox>
               </graphic>
            </Button>

            <!-- Export Excel Button -->
            <Button fx:id="btnExportExcel" styleClass="back-button">
               <graphic>
                  <HBox alignment="CENTER" spacing="8">
                     <children>
                        <FontAwesomeIcon glyphName="FILE_EXCEL_ALT" size="1.5em" styleClass="back-icon" />
                        <Label styleClass="back-text" text="EXCEL" />
                     </children>
                  </HBox>
               </graphic>
            </Button>

            <!-- Export PDF Button -->
            <Button fx:id="btnExportPdf" styleClass="back-button">
               <graphic>
                  <HBox alignment="CENTER" spacing="8">
                     <children>
                        <FontAwesomeIcon glyphName="FILE_PDF_ALT" size="1.5em" styleClass="back-icon" />
                        <Label styleClass="back-text" text="PDF" />
                     </children>
                  </HBox>
               </graphic>
            </Button>
         </children>
         <padding>
            <Insets bottom="15.0" left="30.0" right="30.0" top="15.0" />
         </padding>
      </HBox>

      <!-- Main Content -->
      <VBox spacing="15.0" VBox.vgrow="ALWAYS">
         <padding>
            <Insets bottom="20.0" left="25.0" right="25.0" top="15.0" />
         </padding>
         <children>

            <!-- Filter Section -->
            <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="filter-section">
               <padding>
                  <Insets bottom="12.0" left="15.0" right="15.0" top="12.0" />
               </padding>
               <children>
                  <!-- Period Buttons -->
                  <Label style="-fx-font-weight: bold; -fx-text-fill: #4A148C;" text="Period:" />
                  <ToggleButton fx:id="btnToday" styleClass="period-button, purchase-period" text="Today" minWidth="60" />
                  <ToggleButton fx:id="btnWeek" styleClass="period-button, purchase-period" text="Week" minWidth="55" />
                  <ToggleButton fx:id="btnMonth" styleClass="period-button, purchase-period" text="Month" minWidth="60" />
                  <ToggleButton fx:id="btnYear" styleClass="period-button, purchase-period" text="Year" minWidth="50" />
                  <ToggleButton fx:id="btnCustom" styleClass="period-button, purchase-period" text="Custom" minWidth="65" />

                  <Separator orientation="VERTICAL" />

                  <!-- Date Range Pickers -->
                  <Label style="-fx-text-fill: #555;" text="From:" />
                  <DatePicker fx:id="dpFromDate" prefWidth="130" promptText="Start Date" />
                  <Label style="-fx-text-fill: #555;" text="To:" />
                  <DatePicker fx:id="dpToDate" prefWidth="130" promptText="End Date" />

                  <Separator orientation="VERTICAL" />

                  <!-- Supplier Search -->
                  <Label style="-fx-text-fill: #555;" text="Supplier:" />
                  <TextField fx:id="txtSupplierSearch" prefWidth="180" promptText="Search by supplier name" />
                  <Button fx:id="btnClearSupplier" styleClass="clear-button" text="X" />
               </children>
            </HBox>

            <!-- Summary Cards Row -->
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <!-- Total Receipts Card -->
                  <VBox alignment="CENTER" spacing="8.0" styleClass="summary-card, purchase-summary-card">
                     <children>
                        <FontAwesomeIcon fill="#7B1FA2" glyphName="FILE_TEXT_ALT" size="2em" />
                        <Label fx:id="lblTotalReceipts" styleClass="summary-value" text="0" />
                        <Label styleClass="summary-label" text="Total Receipts" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="30.0" right="30.0" top="15.0" />
                     </padding>
                  </VBox>

                  <!-- Total Amount Card -->
                  <VBox alignment="CENTER" spacing="8.0" styleClass="summary-card, purchase-amount-card">
                     <children>
                        <FontAwesomeIcon fill="#E91E63" glyphName="INR" size="2em" />
                        <Label fx:id="lblTotalAmount" styleClass="summary-value" text="0.00" />
                        <Label styleClass="summary-label" text="Total Paid" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="30.0" right="30.0" top="15.0" />
                     </padding>
                  </VBox>

                  <!-- Cash Paid Card -->
                  <VBox alignment="CENTER" spacing="8.0" styleClass="summary-card, cash-summary-card">
                     <children>
                        <FontAwesomeIcon fill="#009688" glyphName="MONEY" size="2em" />
                        <Label fx:id="lblCashPaid" styleClass="summary-value" text="0.00" />
                        <Label styleClass="summary-label" text="Cash Paid" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="30.0" right="30.0" top="15.0" />
                     </padding>
                  </VBox>

                  <!-- Bank Paid Card -->
                  <VBox alignment="CENTER" spacing="8.0" styleClass="summary-card, bank-summary-card">
                     <children>
                        <FontAwesomeIcon fill="#FF9800" glyphName="BANK" size="2em" />
                        <Label fx:id="lblBankPaid" styleClass="summary-value" text="0.00" />
                        <Label styleClass="summary-label" text="Bank Transfer" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="30.0" right="30.0" top="15.0" />
                     </padding>
                  </VBox>

                  <!-- Total Bills Paid Card -->
                  <VBox alignment="CENTER" spacing="8.0" styleClass="summary-card, bills-paid-card">
                     <children>
                        <FontAwesomeIcon fill="#4CAF50" glyphName="CHECK_CIRCLE" size="2em" />
                        <Label fx:id="lblTotalBillsPaid" styleClass="summary-value" text="0" />
                        <Label styleClass="summary-label" text="Bills Paid" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="30.0" right="30.0" top="15.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>

            <!-- Receipts Table -->
            <VBox VBox.vgrow="ALWAYS" styleClass="table-container">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <TableView fx:id="tblReceipts" VBox.vgrow="ALWAYS" styleClass="purchase-table">
                     <columns>
                        <TableColumn fx:id="colReceiptNo" prefWidth="80" minWidth="70" maxWidth="100" text="Receipt No" />
                        <TableColumn fx:id="colDate" prefWidth="100" minWidth="90" maxWidth="120" text="Date" />
                        <TableColumn fx:id="colSupplier" prefWidth="200" minWidth="150" text="Supplier" />
                        <TableColumn fx:id="colAmount" prefWidth="110" minWidth="100" maxWidth="130" text="Amount" />
                        <TableColumn fx:id="colPaymentMode" prefWidth="100" minWidth="90" maxWidth="120" text="Pay Mode" />
                        <TableColumn fx:id="colBank" prefWidth="150" minWidth="120" text="Bank" />
                        <TableColumn fx:id="colBillsCount" prefWidth="80" minWidth="60" maxWidth="90" text="Bills" />
                        <TableColumn fx:id="colReference" prefWidth="120" minWidth="100" text="Reference" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>

            <!-- Footer with record count -->
            <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="footer-section">
               <padding>
                  <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
               </padding>
               <children>
                  <Label fx:id="lblRecordCount" style="-fx-font-size: 13px; -fx-text-fill: #666;" text="Showing 0 records" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="lblDateRange" style="-fx-font-size: 13px; -fx-text-fill: #666;" text="" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
