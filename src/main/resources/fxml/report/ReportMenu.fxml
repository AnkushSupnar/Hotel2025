<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="report-menu-root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.frontend.controller.report.ReportMenuController">
   <stylesheets>
      <URL value="@../css/master-material.css" />
      <URL value="@../css/report-menu.css" />
   </stylesheets>
   <children>
      <!-- Header with Back Button -->
      <HBox alignment="CENTER_LEFT" styleClass="report-header">
         <children>
            <!-- Back Button -->
            <Button fx:id="btnBack" styleClass="back-button">
               <graphic>
                  <HBox alignment="CENTER" spacing="8">
                     <children>
                        <FontAwesomeIcon glyphName="ARROW_LEFT" size="1.5em" fill="white" />
                        <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="BACK" />
                     </children>
                  </HBox>
               </graphic>
            </Button>

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- Title -->
            <HBox alignment="CENTER" spacing="10">
               <FontAwesomeIcon fill="white" glyphName="BAR_CHART" size="1.8em" />
               <Label styleClass="report-title" text="REPORTS" />
            </HBox>

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
         </padding>
      </HBox>

      <!-- Tab Chips Container -->
      <HBox alignment="CENTER" spacing="20" styleClass="tab-chips-container">
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
         </padding>
         <children>
            <!-- Sales Tab Chip -->
            <HBox fx:id="chipSales" alignment="CENTER" spacing="10"
                  style="-fx-background-color: linear-gradient(to right, #4CAF50, #388E3C); -fx-background-radius: 25; -fx-padding: 12 35; -fx-cursor: hand; -fx-min-width: 160; -fx-effect: dropshadow(gaussian, rgba(76, 175, 80, 0.4), 8, 0, 0, 3);">
               <children>
                  <FontAwesomeIcon fx:id="iconSales" fill="white" glyphName="LINE_CHART" size="1.3em" />
                  <Label fx:id="lblSales" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="SALES" />
               </children>
            </HBox>

            <!-- Purchase Tab Chip -->
            <HBox fx:id="chipPurchase" alignment="CENTER" spacing="10"
                  style="-fx-background-color: #E8EAF6; -fx-background-radius: 25; -fx-padding: 12 35; -fx-cursor: hand; -fx-min-width: 160; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 3, 0, 0, 1);">
               <children>
                  <FontAwesomeIcon fx:id="iconPurchase" fill="#7B1FA2" glyphName="TRUCK" size="1.3em" />
                  <Label fx:id="lblPurchase" style="-fx-text-fill: #5E35B1; -fx-font-size: 14px; -fx-font-weight: bold;" text="PURCHASE" />
               </children>
            </HBox>
         </children>
      </HBox>

      <!-- Content Area - Sales Reports (shown by default) -->
      <VBox fx:id="salesContent" alignment="TOP_CENTER" spacing="20" styleClass="tab-content" VBox.vgrow="ALWAYS">
         <padding>
            <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
         </padding>
         <children>
            <!-- Sales Reports Grid -->
            <HBox alignment="CENTER" spacing="30">
               <children>
                  <!-- Sales Report Card -->
                  <StackPane fx:id="salesReportCard" styleClass="report-card, sales-card">
                     <children>
                        <VBox alignment="CENTER" spacing="15">
                           <children>
                              <StackPane styleClass="card-icon-container, sales-icon-bg">
                                 <children>
                                    <FontAwesomeIcon fill="#4CAF50" glyphName="LINE_CHART" size="2.5em" />
                                 </children>
                              </StackPane>
                              <Label styleClass="card-title" text="Sales Report" />
                              <Label styleClass="card-description" text="View sales data with date filters and export options" />
                              <Button fx:id="btnViewSalesReport" styleClass="card-button, sales-button" text="VIEW REPORT">
                                 <graphic>
                                    <FontAwesomeIcon fill="white" glyphName="ARROW_RIGHT" size="1em" />
                                 </graphic>
                              </Button>
                           </children>
                        </VBox>
                     </children>
                  </StackPane>

                  <!-- Payment Received Report Card -->
                  <StackPane fx:id="paymentReceivedCard" styleClass="report-card, sales-card">
                     <children>
                        <VBox alignment="CENTER" spacing="15">
                           <children>
                              <StackPane styleClass="card-icon-container, sales-icon-bg">
                                 <children>
                                    <FontAwesomeIcon fill="#4CAF50" glyphName="MONEY" size="2.5em" />
                                 </children>
                              </StackPane>
                              <Label styleClass="card-title" text="Payment Received" />
                              <Label styleClass="card-description" text="View all payment receipts from customers" />
                              <Button fx:id="btnViewPaymentReceived" styleClass="card-button, sales-button" text="VIEW REPORT">
                                 <graphic>
                                    <FontAwesomeIcon fill="white" glyphName="ARROW_RIGHT" size="1em" />
                                 </graphic>
                              </Button>
                           </children>
                        </VBox>
                     </children>
                  </StackPane>
               </children>
            </HBox>
         </children>
      </VBox>

      <!-- Content Area - Purchase Reports (hidden by default) -->
      <VBox fx:id="purchaseContent" alignment="TOP_CENTER" spacing="20" styleClass="tab-content" visible="false" managed="false" VBox.vgrow="ALWAYS">
         <padding>
            <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
         </padding>
         <children>
            <!-- Purchase Reports Grid -->
            <HBox alignment="CENTER" spacing="30">
               <children>
                  <!-- Purchase Report Card -->
                  <StackPane fx:id="purchaseReportCard" styleClass="report-card, purchase-card">
                     <children>
                        <VBox alignment="CENTER" spacing="15">
                           <children>
                              <StackPane styleClass="card-icon-container, purchase-icon-bg">
                                 <children>
                                    <FontAwesomeIcon fill="#7B1FA2" glyphName="TRUCK" size="2.5em" />
                                 </children>
                              </StackPane>
                              <Label styleClass="card-title" text="Purchase Report" />
                              <Label styleClass="card-description" text="View purchase data with date filters and export options" />
                              <Button fx:id="btnViewPurchaseReport" styleClass="card-button, purchase-button" text="VIEW REPORT">
                                 <graphic>
                                    <FontAwesomeIcon fill="white" glyphName="ARROW_RIGHT" size="1em" />
                                 </graphic>
                              </Button>
                           </children>
                        </VBox>
                     </children>
                  </StackPane>

                  <!-- Pay Receipt Report Card -->
                  <StackPane fx:id="payReceiptReportCard" styleClass="report-card, purchase-card">
                     <children>
                        <VBox alignment="CENTER" spacing="15">
                           <children>
                              <StackPane styleClass="card-icon-container, purchase-icon-bg">
                                 <children>
                                    <FontAwesomeIcon fill="#7B1FA2" glyphName="CREDIT_CARD" size="2.5em" />
                                 </children>
                              </StackPane>
                              <Label styleClass="card-title" text="Pay Receipt Report" />
                              <Label styleClass="card-description" text="View all payments made to suppliers" />
                              <Button fx:id="btnViewPayReceipt" styleClass="card-button, purchase-button" text="VIEW REPORT">
                                 <graphic>
                                    <FontAwesomeIcon fill="white" glyphName="ARROW_RIGHT" size="1em" />
                                 </graphic>
                              </Button>
                           </children>
                        </VBox>
                     </children>
                  </StackPane>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
