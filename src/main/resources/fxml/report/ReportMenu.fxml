<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<VBox styleClass="report-menu-root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.frontend.controller.report.ReportMenuController">
   <stylesheets>
      <URL value="@../css/master-material.css" />
      <URL value="@../css/report-menu.css" />
   </stylesheets>
   <children>
      <!-- Header with Back Button -->
      <HBox alignment="CENTER_LEFT" styleClass="report-header">
         <children>
            <!-- Back Button -->
            <Button fx:id="btnBack" styleClass="back-button">
               <graphic>
                  <HBox alignment="CENTER" spacing="8">
                     <children>
                        <FontAwesomeIcon fill="white" glyphName="ARROW_LEFT" size="1.5em" />
                        <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="BACK" />
                     </children>
                  </HBox>
               </graphic>
            </Button>

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- Title -->
            <HBox alignment="CENTER" spacing="10">
               <FontAwesomeIcon fill="white" glyphName="BAR_CHART" size="1.8em" />
               <Label styleClass="report-title" text="REPORTS" />
            </HBox>

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
         </padding>
      </HBox>

      <!-- Tab Chips Container -->
      <HBox alignment="CENTER" spacing="20" styleClass="tab-chips-container">
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
         </padding>
         <children>
            <!-- Sales Tab Chip -->
            <HBox fx:id="chipSales" alignment="CENTER" spacing="10" style="-fx-background-color: linear-gradient(to right, #4CAF50, #388E3C); -fx-background-radius: 25; -fx-padding: 12 35; -fx-cursor: hand; -fx-min-width: 160; -fx-effect: dropshadow(gaussian, rgba(76, 175, 80, 0.4), 8, 0, 0, 3);">
               <children>
                  <FontAwesomeIcon fx:id="iconSales" fill="white" glyphName="LINE_CHART" size="1.3em" />
                  <Label fx:id="lblSales" style="-fx-text-fill: white; -fx-font-size: 25px; -fx-font-weight: bold;" text="ivak`I" />
               </children>
            </HBox>

            <!-- Purchase Tab Chip -->
            <HBox fx:id="chipPurchase" alignment="CENTER" spacing="10" style="-fx-background-color: #E8EAF6; -fx-background-radius: 25; -fx-padding: 12 35; -fx-cursor: hand; -fx-min-width: 160; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 3, 0, 0, 1);">
               <children>
                  <FontAwesomeIcon fx:id="iconPurchase" fill="#7B1FA2" glyphName="TRUCK" size="1.3em" />
                  <Label fx:id="lblPurchase" style="-fx-text-fill: #5E35B1; -fx-font-size: 25px; -fx-font-weight: bold;" text="KarodI" />
               </children>
            </HBox>

            <!-- Miscellaneous Tab Chip -->
            <HBox fx:id="chipMiscellaneous" alignment="CENTER" spacing="10" style="-fx-background-color: #E8EAF6; -fx-background-radius: 25; -fx-padding: 12 35; -fx-cursor: hand; -fx-min-width: 160; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 3, 0, 0, 1);">
               <children>
                  <FontAwesomeIcon fx:id="iconMiscellaneous" fill="#E65100" glyphName="COG" size="1.3em" />
                  <Label fx:id="lblMiscellaneous" style="-fx-text-fill: #E65100; -fx-font-size: 25px; -fx-font-weight: bold;" text="[tar" />
               </children>
            </HBox>

            <!-- Stock Tab Chip -->
            <HBox fx:id="chipStock" alignment="CENTER" spacing="10" style="-fx-background-color: #E8EAF6; -fx-background-radius: 25; -fx-padding: 12 35; -fx-cursor: hand; -fx-min-width: 160; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 3, 0, 0, 1);">
               <children>
                  <FontAwesomeIcon fx:id="iconStock" fill="#00897B" glyphName="CUBES" size="1.3em" />
                  <Label fx:id="lblStock" style="-fx-text-fill: #00897B; -fx-font-size: 25px; -fx-font-weight: bold;" text="sTa^k " />
               </children>
            </HBox>
         </children>
      </HBox>

      <!-- Content Area - Sales Reports -->
      <VBox fx:id="salesContent" alignment="TOP_CENTER" spacing="20" styleClass="tab-content" VBox.vgrow="ALWAYS">
         <padding>
            <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
         </padding>
         <children>
            <HBox alignment="CENTER" spacing="30">
               <children>
                  <!-- Sales Report Card - Green -->
                  <VBox fx:id="salesReportCard" alignment="CENTER" spacing="8" style="-fx-background-color: linear-gradient(to bottom right, #4CAF50, #81C784); -fx-background-radius: 16; -fx-padding: 18; -fx-cursor: hand; -fx-pref-width: 185; -fx-pref-height: 185; -fx-min-width: 185; -fx-min-height: 185; -fx-max-width: 185; -fx-max-height: 185; -fx-effect: dropshadow(three-pass-box, rgba(76, 175, 80, 0.4), 12, 0, 0, 4);">
                     <StackPane style="-fx-min-width: 54; -fx-min-height: 54; -fx-max-width: 54; -fx-max-height: 54; -fx-background-color: rgba(255,255,255,0.25); -fx-background-radius: 27;">
                        <FontAwesomeIcon fill="#FFFFFF" glyphName="LINE_CHART" size="1.8em" />
                     </StackPane>
                     <Label fx:id="lblSalesReportTitle" style="-fx-text-fill: white; -fx-font-size: 25px; -fx-font-weight: bold;" text="ivak`I" />
                     <Label style="-fx-text-fill: rgba(255,255,255,0.85); -fx-font-size: 12px;" text="Sales Report" />
                  </VBox>

                  <!-- Payment Received Card - Teal -->
                  <VBox fx:id="paymentReceivedCard" alignment="CENTER" spacing="8" style="-fx-background-color: linear-gradient(to bottom right, #2ed8b6, #59e0c5); -fx-background-radius: 16; -fx-padding: 18; -fx-cursor: hand; -fx-pref-width: 185; -fx-pref-height: 185; -fx-min-width: 185; -fx-min-height: 185; -fx-max-width: 185; -fx-max-height: 185; -fx-effect: dropshadow(three-pass-box, rgba(46, 216, 182, 0.4), 12, 0, 0, 4);">
                     <StackPane style="-fx-min-width: 54; -fx-min-height: 54; -fx-max-width: 54; -fx-max-height: 54; -fx-background-color: rgba(255,255,255,0.25); -fx-background-radius: 27;">
                        <FontAwesomeIcon fill="#FFFFFF" glyphName="MONEY" size="1.8em" />
                     </StackPane>
                     <Label fx:id="lblPaymentReceivedTitle" style="-fx-text-fill: white; -fx-font-size: 25px; -fx-font-weight: bold;" text="jamaa pavataI" />
                     <Label style="-fx-text-fill: rgba(255,255,255,0.85); -fx-font-size: 12px;" text="Payment Received" />
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>

      <!-- Content Area - Purchase Reports -->
      <VBox fx:id="purchaseContent" alignment="TOP_CENTER" managed="false" spacing="20" styleClass="tab-content" visible="false" VBox.vgrow="ALWAYS">
         <padding>
            <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
         </padding>
         <children>
            <HBox alignment="CENTER" spacing="30">
               <children>
                  <!-- Purchase Report Card - Purple -->
                  <VBox fx:id="purchaseReportCard" alignment="CENTER" spacing="8" style="-fx-background-color: linear-gradient(to bottom right, #7C4DFF, #B388FF); -fx-background-radius: 16; -fx-padding: 18; -fx-cursor: hand; -fx-pref-width: 185; -fx-pref-height: 185; -fx-min-width: 185; -fx-min-height: 185; -fx-max-width: 185; -fx-max-height: 185; -fx-effect: dropshadow(three-pass-box, rgba(124, 77, 255, 0.4), 12, 0, 0, 4);">
                     <StackPane style="-fx-min-width: 54; -fx-min-height: 54; -fx-max-width: 54; -fx-max-height: 54; -fx-background-color: rgba(255,255,255,0.25); -fx-background-radius: 27;">
                        <FontAwesomeIcon fill="#FFFFFF" glyphName="TRUCK" size="1.8em" />
                     </StackPane>
                     <Label fx:id="lblPurchaseReportTitle" style="-fx-text-fill: white; -fx-font-size: 25px; -fx-font-weight: bold;" text="KarodI" />
                     <Label style="-fx-text-fill: rgba(255,255,255,0.85); -fx-font-size: 12px;" text="Purchase Report" />
                  </VBox>

                  <!-- Pay Receipt Report Card - Orange -->
                  <VBox fx:id="payReceiptReportCard" alignment="CENTER" spacing="8" style="-fx-background-color: linear-gradient(to bottom right, #FF9800, #FFB74D); -fx-background-radius: 16; -fx-padding: 18; -fx-cursor: hand; -fx-pref-width: 185; -fx-pref-height: 185; -fx-min-width: 185; -fx-min-height: 185; -fx-max-width: 185; -fx-max-height: 185; -fx-effect: dropshadow(three-pass-box, rgba(255, 152, 0, 0.4), 12, 0, 0, 4);">
                     <StackPane style="-fx-min-width: 54; -fx-min-height: 54; -fx-max-width: 54; -fx-max-height: 54; -fx-background-color: rgba(255,255,255,0.25); -fx-background-radius: 27;">
                        <FontAwesomeIcon fill="#FFFFFF" glyphName="CREDIT_CARD" size="1.8em" />
                     </StackPane>
                     <Label fx:id="lblPayReceiptReportTitle" style="-fx-text-fill: white; -fx-font-size: 25px; -fx-font-weight: bold;" text="BarNaa pavataI" />
                     <Label style="-fx-text-fill: rgba(255,255,255,0.85); -fx-font-size: 12px;" text="Pay Receipt Report" />
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>

      <!-- Content Area - Miscellaneous Reports -->
      <VBox fx:id="miscellaneousContent" alignment="TOP_CENTER" managed="false" spacing="20" styleClass="tab-content" visible="false" VBox.vgrow="ALWAYS">
         <padding>
            <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
         </padding>
         <children>
            <HBox alignment="CENTER" spacing="30">
               <children>
                  <!-- Bill Search Card - Deep Orange -->
                  <VBox fx:id="billSearchReportCard" alignment="CENTER" spacing="8" style="-fx-background-color: linear-gradient(to bottom right, #E65100, #FF8A65); -fx-background-radius: 16; -fx-padding: 18; -fx-cursor: hand; -fx-pref-width: 185; -fx-pref-height: 185; -fx-min-width: 185; -fx-min-height: 185; -fx-max-width: 185; -fx-max-height: 185; -fx-effect: dropshadow(three-pass-box, rgba(230, 81, 0, 0.4), 12, 0, 0, 4);">
                     <StackPane style="-fx-min-width: 54; -fx-min-height: 54; -fx-max-width: 54; -fx-max-height: 54; -fx-background-color: rgba(255,255,255,0.25); -fx-background-radius: 27;">
                        <FontAwesomeIcon fill="#FFFFFF" glyphName="SEARCH" size="1.8em" />
                     </StackPane>
                     <Label fx:id="lblBillSearchTitle" style="-fx-text-fill: white; -fx-font-size: 25px; -fx-font-weight: bold;" text="ibala SaaoQaa" />
                     <Label style="-fx-text-fill: rgba(255,255,255,0.85); -fx-font-size: 12px;" text="Bill Search" />
                  </VBox>

                  <!-- Reduced Item Card - Red -->
                  <VBox fx:id="reducedItemReportCard" alignment="CENTER" spacing="8" style="-fx-background-color: linear-gradient(to bottom right, #FF5370, #ff869a); -fx-background-radius: 16; -fx-padding: 18; -fx-cursor: hand; -fx-pref-width: 185; -fx-pref-height: 185; -fx-min-width: 185; -fx-min-height: 185; -fx-max-width: 185; -fx-max-height: 185; -fx-effect: dropshadow(three-pass-box, rgba(255, 83, 112, 0.4), 12, 0, 0, 4);">
                     <StackPane style="-fx-min-width: 54; -fx-min-height: 54; -fx-max-width: 54; -fx-max-height: 54; -fx-background-color: rgba(255,255,255,0.25); -fx-background-radius: 27;">
                        <FontAwesomeIcon fill="#FFFFFF" glyphName="MINUS_CIRCLE" size="1.8em" />
                     </StackPane>
                     <Label fx:id="lblReducedItemTitle" style="-fx-text-fill: white; -fx-font-size: 25px; -fx-font-weight: bold;" text="kmaI kolaolao" />
                     <Label style="-fx-text-fill: rgba(255,255,255,0.85); -fx-font-size: 12px;" text="Reduced Item Report" />
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>

      <!-- Content Area - Stock Reports -->
      <VBox fx:id="stockContent" alignment="TOP_CENTER" managed="false" spacing="20" styleClass="tab-content" visible="false" VBox.vgrow="ALWAYS">
         <padding>
            <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
         </padding>
         <children>
            <HBox alignment="CENTER" spacing="30">
               <children>
                  <!-- Stock Report Card - Teal -->
                  <VBox fx:id="stockReportCard" alignment="CENTER" spacing="8" style="-fx-background-color: linear-gradient(to bottom right, #00897B, #4DB6AC); -fx-background-radius: 16; -fx-padding: 18; -fx-cursor: hand; -fx-pref-width: 185; -fx-pref-height: 185; -fx-min-width: 185; -fx-min-height: 185; -fx-max-width: 185; -fx-max-height: 185; -fx-effect: dropshadow(three-pass-box, rgba(0, 137, 123, 0.4), 12, 0, 0, 4);">
                     <StackPane style="-fx-min-width: 54; -fx-min-height: 54; -fx-max-width: 54; -fx-max-height: 54; -fx-background-color: rgba(255,255,255,0.25); -fx-background-radius: 27;">
                        <FontAwesomeIcon fill="#FFFFFF" glyphName="CUBES" size="1.8em" />
                     </StackPane>
                     <Label fx:id="lblStockReportTitle" style="-fx-text-fill: white; -fx-font-size: 25px; -fx-font-weight: bold;" text="sTa^k" />
                     <Label style="-fx-text-fill: rgba(255,255,255,0.85); -fx-font-size: 12px;" text="Stock Report" />
                  </VBox>

                  <!-- Low Stock Alert Card - Amber -->
                  <VBox fx:id="lowStockAlertCard" alignment="CENTER" spacing="8" style="-fx-background-color: linear-gradient(to bottom right, #FFA000, #FFCA28); -fx-background-radius: 16; -fx-padding: 18; -fx-cursor: hand; -fx-pref-width: 185; -fx-pref-height: 185; -fx-min-width: 185; -fx-min-height: 185; -fx-max-width: 185; -fx-max-height: 185; -fx-effect: dropshadow(three-pass-box, rgba(255, 160, 0, 0.4), 12, 0, 0, 4);">
                     <StackPane style="-fx-min-width: 54; -fx-min-height: 54; -fx-max-width: 54; -fx-max-height: 54; -fx-background-color: rgba(255,255,255,0.25); -fx-background-radius: 27;">
                        <FontAwesomeIcon fill="#FFFFFF" glyphName="EXCLAMATION_TRIANGLE" size="1.8em" />
                     </StackPane>
                     <Label fx:id="lblLowStockTitle" style="-fx-text-fill: white; -fx-font-size: 25px; -fx-font-weight: bold;" text="kmaI sTa^k" />
                     <Label style="-fx-text-fill: rgba(255,255,255,0.85); -fx-font-size: 12px;" text="Low Stock Alerts" />
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
