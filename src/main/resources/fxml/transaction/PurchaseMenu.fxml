<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="TOP_CENTER" spacing="20" style="-fx-background-color: #ECEFF1; -fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.frontend.controller.transaction.PurchaseMenuController">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: linear-gradient(to right, #7B1FA2, #6A1B9A); -fx-background-radius: 8; -fx-padding: 15;">
        <!-- Back Button -->
        <Button fx:id="btnBack" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 5; -fx-cursor: hand;">
            <graphic>
                <HBox alignment="CENTER" spacing="8">
                    <FontAwesomeIcon fill="white" glyphName="ARROW_LEFT" size="1.3em" />
                    <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="BACK" />
                </HBox>
            </graphic>
        </Button>

        <Region HBox.hgrow="ALWAYS" />

        <!-- Title -->
        <HBox alignment="CENTER" spacing="10">
            <FontAwesomeIcon fill="white" glyphName="TRUCK" size="1.8em" />
            <Label style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" text="PURCHASE MENU" />
        </HBox>

        <Region HBox.hgrow="ALWAYS" />
    </HBox>

    <!-- Purchase Cards Container - Dashboard Style -->
    <HBox alignment="CENTER" spacing="30" style="-fx-padding: 40 0;">

        <!-- Purchase Order Card - Orange (Active Tables color) -->
        <VBox fx:id="btnPurchaseOrder" alignment="CENTER" spacing="8" style="-fx-background-color: linear-gradient(to bottom right, #FF9800, #FFB74D); -fx-background-radius: 16; -fx-padding: 18; -fx-cursor: hand; -fx-pref-width: 185; -fx-pref-height: 185; -fx-min-width: 185; -fx-min-height: 185; -fx-max-width: 185; -fx-max-height: 185; -fx-effect: dropshadow(three-pass-box, rgba(255, 152, 0, 0.4), 12, 0, 0, 4);">
            <StackPane style="-fx-min-width: 54; -fx-min-height: 54; -fx-max-width: 54; -fx-max-height: 54; -fx-background-color: rgba(255,255,255,0.25); -fx-background-radius: 27;">
                <FontAwesomeIcon fill="#FFFFFF" glyphName="CLIPBOARD" size="1.8em" />
            </StackPane>
            <Label fx:id="lblPurchaseOrderTitle" style="-fx-text-fill: white; -fx-font-size: 25px; -fx-font-weight: bold;" text="Aa^D-r" />
            <Label style="-fx-text-fill: rgba(255,255,255,0.85); -fx-font-size: 12px;" text="Purchase Order" />
        </VBox>

        <!-- Purchase Invoice Card - Purple (Completed Today color) -->
        <VBox fx:id="btnPurchaseInvoice" alignment="CENTER" spacing="8" style="-fx-background-color: linear-gradient(to bottom right, #7C4DFF, #B388FF); -fx-background-radius: 16; -fx-padding: 18; -fx-cursor: hand; -fx-pref-width: 185; -fx-pref-height: 185; -fx-min-width: 185; -fx-min-height: 185; -fx-max-width: 185; -fx-max-height: 185; -fx-effect: dropshadow(three-pass-box, rgba(124, 77, 255, 0.4), 12, 0, 0, 4);">
            <StackPane style="-fx-min-width: 54; -fx-min-height: 54; -fx-max-width: 54; -fx-max-height: 54; -fx-background-color: rgba(255,255,255,0.25); -fx-background-radius: 27;">
                <FontAwesomeIcon fill="#FFFFFF" glyphName="SHOPPING_CART" size="1.8em" />
            </StackPane>
            <Label fx:id="lblPurchaseInvoiceTitle" style="-fx-text-fill: white; -fx-font-size: 25px; -fx-font-weight: bold;" text="KarodI ibala" />
            <Label style="-fx-text-fill: rgba(255,255,255,0.85); -fx-font-size: 12px;" text="Purchase Entry" />
        </VBox>

        <!-- Pay Receipt Card - Red (Closed Bill color) -->
        <VBox fx:id="btnPayReceipt" alignment="CENTER" spacing="8" style="-fx-background-color: linear-gradient(to bottom right, #FF5370, #ff869a); -fx-background-radius: 16; -fx-padding: 18; -fx-cursor: hand; -fx-pref-width: 185; -fx-pref-height: 185; -fx-min-width: 185; -fx-min-height: 185; -fx-max-width: 185; -fx-max-height: 185; -fx-effect: dropshadow(three-pass-box, rgba(255, 83, 112, 0.4), 12, 0, 0, 4);">
            <StackPane style="-fx-min-width: 54; -fx-min-height: 54; -fx-max-width: 54; -fx-max-height: 54; -fx-background-color: rgba(255,255,255,0.25); -fx-background-radius: 27;">
                <FontAwesomeIcon fill="#FFFFFF" glyphName="MONEY" size="1.8em" />
            </StackPane>
            <Label fx:id="lblPayReceiptTitle" style="-fx-text-fill: white; -fx-font-size: 25px; -fx-font-weight: bold;" text="BarNaa pavataI" />
            <Label style="-fx-text-fill: rgba(255,255,255,0.85); -fx-font-size: 12px;" text="Pay Receipt" />
        </VBox>

    </HBox>

</VBox>
