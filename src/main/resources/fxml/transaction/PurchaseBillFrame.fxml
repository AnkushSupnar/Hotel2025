<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane style="-fx-background-color: #ECEFF1;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.frontend.controller.transaction.PurchaseBillController">
    <SplitPane dividerPositions="0.6" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

    <!-- LEFT SIDE: Bill Entry Form (60%) -->
    <VBox spacing="10" style="-fx-background-color: #ECEFF1; -fx-padding: 12;">

        <!-- Header -->
        <HBox alignment="CENTER" spacing="15" style="-fx-background-color: linear-gradient(to right, #7B1FA2, #6A1B9A); -fx-background-radius: 6; -fx-padding: 10;">
            <FontAwesomeIcon fill="white" glyphName="SHOPPING_CART" size="1.5em" />
            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="PURCHASE BILL ENTRY" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnBack" style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-size: 11px; -fx-background-radius: 4; -fx-cursor: hand; -fx-padding: 5 12;" text="BACK">
                <graphic>
                    <FontAwesomeIcon fill="white" glyphName="ARROW_LEFT" size="1em" />
                </graphic>
            </Button>
        </HBox>

        <!-- Section 1: Supplier & Bill Info -->
        <HBox alignment="CENTER_LEFT" spacing="12" style="-fx-background-color: white; -fx-background-radius: 6; -fx-padding: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 4, 0, 0, 1);">
            <VBox spacing="3" HBox.hgrow="ALWAYS">
                <Label fx:id="lblSupplier" style="-fx-text-fill: #7B1FA2; -fx-font-weight: bold;" text="paurvazadaracao naava">
                    <font><Font name="Kiran" size="20.0" /></font>
                </Label>
                <TextField fx:id="txtSupplier" prefHeight="42.0" prefWidth="353.0" promptText="paurvazadaracao naava....." style="-fx-background-color: #FAFAFA; -fx-border-color: #7B1FA2; -fx-border-width: 2; -fx-border-radius: 4; -fx-background-radius: 4; -fx-font-family: 'Kiran'; -fx-font-size: 22px;" />
            </VBox>
            <VBox minWidth="120" spacing="3">
                <Label style="-fx-text-fill: #616161; -fx-font-size: 12px;" text="Bill Date" />
                <DatePicker fx:id="dpBillDate" maxWidth="Infinity" prefHeight="38" prefWidth="106.0" style="-fx-font-size: 12px;" HBox.hgrow="NEVER" />
            </VBox>
            <VBox minWidth="100" spacing="3">
                <Label style="-fx-text-fill: #616161; -fx-font-size: 12px;" text="Supplier Bill No." />
                <TextField fx:id="txtSupplierBillNo" maxWidth="Infinity" prefHeight="38" prefWidth="86.0" promptText="Bill No." style="-fx-font-size: 13px; -fx-background-color: #FAFAFA; -fx-border-color: #E0E0E0; -fx-border-radius: 4; -fx-background-radius: 4;" />
            </VBox>
            <VBox minWidth="80" spacing="3">
                <Label style="-fx-text-fill: #616161; -fx-font-size: 12px;" text="Ref No." />
                <TextField fx:id="txtReffNo" maxWidth="Infinity" prefHeight="38" prefWidth="49.0" promptText="Ref" style="-fx-font-size: 13px; -fx-background-color: #FAFAFA; -fx-border-color: #E0E0E0; -fx-border-radius: 4; -fx-background-radius: 4;" />
            </VBox>
            <VBox alignment="CENTER" spacing="2" style="-fx-background-color: #7B1FA2; -fx-background-radius: 4; -fx-padding: 6 12;">
                <Label style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 9px;" text="ITEMS" />
                <Label fx:id="lblItemCount" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="0" />
            </VBox>
        </HBox>

        <!-- Section 2: Item Entry - Two Rows -->
        <VBox spacing="8" style="-fx-background-color: white; -fx-background-radius: 6; -fx-padding: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 4, 0, 0, 1);">
            <!-- Row 1: Item Fields -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <VBox minWidth="140" spacing="3" HBox.hgrow="SOMETIMES">
                    <Label fx:id="lblCategory" style="-fx-text-fill: #7B1FA2; -fx-font-weight: bold;" text="k^TogaorI">
                        <font><Font name="Kiran" size="20.0" /></font>
                    </Label>
                    <TextField fx:id="txtCategory" maxWidth="Infinity" prefHeight="40" prefWidth="195.0" promptText="k^TogaorI SaaoQaa..." style="-fx-background-color: #FAFAFA; -fx-border-color: #E0E0E0; -fx-border-radius: 4; -fx-background-radius: 4;">
                        <font><Font name="Kiran" size="20.0" /></font>
                    </TextField>
                </VBox>
                <VBox spacing="3" HBox.hgrow="ALWAYS">
                    <Label fx:id="lblItemName" style="-fx-text-fill: #7B1FA2; -fx-font-weight: bold;" text="maalaacao naava">
                        <font><Font name="Kiran" size="20.0" /></font>
                    </Label>
                    <TextField fx:id="txtItemName" maxWidth="Infinity" prefHeight="40" promptText="maalacao naava" style="-fx-background-color: #FAFAFA; -fx-border-color: #E0E0E0; -fx-border-radius: 4; -fx-background-radius: 4;">
                        <font><Font name="Kiran" size="20.0" /></font>
                    </TextField>
                </VBox>
                <VBox minWidth="70" spacing="3">
                    <Label fx:id="lblQty" style="-fx-text-fill: #616161;" text="naga">
                        <font><Font name="Kiran" size="20.0" /></font>
                    </Label>
                    <TextField fx:id="txtQty" alignment="CENTER" maxWidth="Infinity" prefHeight="40" prefWidth="61.0" promptText="0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #FAFAFA; -fx-border-color: #E0E0E0; -fx-border-radius: 4; -fx-background-radius: 4;" />
                </VBox>
                <VBox minWidth="80" spacing="3">
                    <Label fx:id="lblRate" style="-fx-text-fill: #616161;" text="dr">
                        <font><Font name="Kiran" size="20.0" /></font>
                    </Label>
                    <TextField fx:id="txtRate" alignment="CENTER" maxWidth="Infinity" prefHeight="40" prefWidth="69.0" promptText="0.00" style="-fx-font-size: 16px; -fx-background-color: #FAFAFA; -fx-border-color: #E0E0E0; -fx-border-radius: 4; -fx-background-radius: 4;" />
                </VBox>
                <VBox minWidth="100" spacing="3">
                    <Label fx:id="lblAmount" style="-fx-text-fill: #616161;" text="r@kma">
                        <font><Font name="Kiran" size="20.0" /></font>
                    </Label>
                    <TextField fx:id="txtAmount" alignment="CENTER" editable="false" maxWidth="Infinity" prefHeight="40" prefWidth="87.0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #E8F5E9; -fx-border-color: #4CAF50; -fx-border-width: 2; -fx-border-radius: 4; -fx-background-radius: 4;" text="0.00" />
                </VBox>
            </HBox>
            <!-- Row 2: Action Buttons -->
            <HBox alignment="CENTER_LEFT" spacing="8">
                <Button fx:id="btnAddItem" maxWidth="Infinity" prefHeight="36" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 12px; -fx-font-weight: bold; -fx-background-radius: 4; -fx-cursor: hand;" text="ADD" HBox.hgrow="ALWAYS">
                    <graphic><FontAwesomeIcon fill="white" glyphName="PLUS" size="1em" /></graphic>
                </Button>
                <Button fx:id="btnEditItem" maxWidth="Infinity" prefHeight="36" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 12px; -fx-font-weight: bold; -fx-background-radius: 4; -fx-cursor: hand;" text="EDIT" HBox.hgrow="ALWAYS">
                    <graphic><FontAwesomeIcon fill="white" glyphName="PENCIL" size="1em" /></graphic>
                </Button>
                <Button fx:id="btnClearFields" maxWidth="Infinity" prefHeight="36" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 12px; -fx-font-weight: bold; -fx-background-radius: 4; -fx-cursor: hand;" text="CLEAR" HBox.hgrow="ALWAYS">
                    <graphic><FontAwesomeIcon fill="white" glyphName="ERASER" size="1em" /></graphic>
                </Button>
                <Button fx:id="btnRemoveItem" maxWidth="Infinity" prefHeight="36" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-size: 12px; -fx-font-weight: bold; -fx-background-radius: 4; -fx-cursor: hand;" text="REMOVE" HBox.hgrow="ALWAYS">
                    <graphic><FontAwesomeIcon fill="white" glyphName="TRASH" size="1em" /></graphic>
                </Button>
            </HBox>
        </VBox>

        <!-- Items Table -->
        <TableView fx:id="tblPurchaseItems" style="-fx-background-color: white; -fx-background-radius: 6; -fx-font-size: 14px;" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colSrNo" minWidth="50" prefWidth="60" style="-fx-alignment: CENTER; -fx-font-size: 14px;" text="Sr." />
                <TableColumn fx:id="colItemName" minWidth="200" prefWidth="300" style="-fx-alignment: CENTER-LEFT;" text="Item Name" />
                <TableColumn fx:id="colQty" minWidth="100" prefWidth="120" style="-fx-alignment: CENTER-RIGHT;" text="Quantity" />
                <TableColumn fx:id="colRate" minWidth="100" prefWidth="120" style="-fx-alignment: CENTER-RIGHT;" text="Rate" />
                <TableColumn fx:id="colAmount" minWidth="100" prefWidth="120" style="-fx-alignment: CENTER-RIGHT;" text="Amount" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <!-- Section 3: Bill Summary -->
        <HBox spacing="12" style="-fx-background-color: white; -fx-background-radius: 6; -fx-padding: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 4, 0, 0, 1);">

            <!-- Left: Remarks -->
            <VBox minWidth="150.0" spacing="4" HBox.hgrow="SOMETIMES">
                <Label fx:id="lblRemarks" style="-fx-text-fill: #616161;" text="Saora">
                    <font><Font name="Kiran" size="20.0" /></font>
                </Label>
                <TextField fx:id="txtRemarks" maxWidth="Infinity" prefHeight="38" promptText="Saora ilaha..." style="-fx-background-color: #FAFAFA; -fx-border-color: #E0E0E0; -fx-border-radius: 4; -fx-background-radius: 4;">
                    <font><Font name="Kiran" size="20.0" /></font>
                </TextField>
                <HBox alignment="CENTER_LEFT" spacing="8" style="-fx-padding: 4 0 0 0;">
                    <HBox alignment="CENTER" spacing="6" style="-fx-background-color: white; -fx-border-color: #7B1FA2; -fx-border-radius: 4; -fx-background-radius: 4; -fx-padding: 2 6;" HBox.hgrow="ALWAYS">
                        <FontAwesomeIcon fill="#7B1FA2" glyphName="MONEY" size="1em" />
                        <ComboBox fx:id="cmbPaymentMode" maxWidth="Infinity" prefHeight="32" style="-fx-font-size: 18px; -fx-background-color: transparent; -fx-border-color: transparent;" HBox.hgrow="ALWAYS" />
                    </HBox>
                </HBox>
            </VBox>

            <Separator orientation="VERTICAL" />

            <!-- Center: Bill Calculations -->
            <VBox minWidth="150.0" prefHeight="138.0" prefWidth="214.0" spacing="6" style="-fx-padding: 0 8;" HBox.hgrow="SOMETIMES">
                <HBox alignment="CENTER_LEFT">
                    <Label fx:id="lblSubTotalLabel" minWidth="80.0" style="-fx-text-fill: #616161;" text="ekUNa r@kma" HBox.hgrow="ALWAYS">
                        <font><Font name="Kiran" size="20.0" /></font>
                    </Label>
                    <Label fx:id="lblSubTotal" minWidth="80" prefHeight="26.0" prefWidth="118.0" style="-fx-text-fill: #212121; -fx-font-size: 16px; -fx-font-weight: bold; -fx-alignment: CENTER-RIGHT;" text="0.00" />
                </HBox>
                <HBox alignment="CENTER_LEFT">
                    <Label fx:id="lblDiscountLabel" minWidth="80.0" style="-fx-text-fill: #616161;" text="iDska{MT" HBox.hgrow="ALWAYS">
                        <font><Font name="Kiran" size="20.0" /></font>
                    </Label>
                    <TextField fx:id="txtDiscount" alignment="CENTER_RIGHT" minWidth="80.0" prefHeight="30" promptText="0.00" style="-fx-font-size: 13px; -fx-background-color: #FAFAFA; -fx-border-color: #E0E0E0; -fx-border-radius: 4; -fx-background-radius: 4;" />
                </HBox>
                <HBox alignment="CENTER_LEFT">
                    <Label minWidth="80.0" style="-fx-text-fill: #616161; -fx-font-size: 13px;" text="GST (+)" HBox.hgrow="ALWAYS" />
                    <TextField fx:id="txtGst" alignment="CENTER_RIGHT" minWidth="80.0" prefHeight="30" promptText="0.00" style="-fx-font-size: 13px; -fx-background-color: #FAFAFA; -fx-border-color: #E0E0E0; -fx-border-radius: 4; -fx-background-radius: 4;" />
                </HBox>
                <HBox alignment="CENTER_LEFT">
                    <Label minWidth="80.0" style="-fx-text-fill: #616161; -fx-font-size: 13px;" text="Other Tax (+)" HBox.hgrow="ALWAYS" />
                    <TextField fx:id="txtOtherTax" alignment="CENTER_RIGHT" minWidth="80.0" prefHeight="30" promptText="0.00" style="-fx-font-size: 13px; -fx-background-color: #FAFAFA; -fx-border-color: #E0E0E0; -fx-border-radius: 4; -fx-background-radius: 4;" />
                </HBox>
            </VBox>

            <Separator orientation="VERTICAL" />

            <!-- Right: Grand Total & Actions -->
            <VBox alignment="CENTER" minWidth="200.0" spacing="6.0">
                <VBox alignment="CENTER" maxWidth="Infinity" style="-fx-background-color: linear-gradient(to bottom, #7B1FA2, #6A1B9A); -fx-background-radius: 6; -fx-padding: 12 20;">
                    <Label fx:id="lblGrandTotalLabel" style="-fx-text-fill: rgba(255,255,255,0.8);" text="ibala r@kma">
                        <font><Font name="Kiran" size="20.0" /></font>
                    </Label>
                    <Label fx:id="lblGrandTotal" style="-fx-text-fill: white; -fx-font-weight: bold;" text="0.00">
                     <font>
                        <Font size="26.0" />
                     </font></Label>
                </VBox>
                <HBox alignment="CENTER" spacing="6">
                    <Button fx:id="btnSaveBill" maxWidth="Infinity" prefHeight="36" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 12px; -fx-font-weight: bold; -fx-background-radius: 4; -fx-cursor: hand;" text="SAVE" HBox.hgrow="ALWAYS">
                        <graphic><FontAwesomeIcon fill="white" glyphName="SAVE" size="1em" /></graphic>
                    </Button>
                    <Button fx:id="btnNewBill" maxWidth="Infinity" prefHeight="36" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 11px; -fx-background-radius: 4; -fx-cursor: hand;" text="NEW" HBox.hgrow="ALWAYS">
                        <graphic><FontAwesomeIcon fill="white" glyphName="PLUS" size="1em" /></graphic>
                    </Button>
                    <Button fx:id="btnClearAll" maxWidth="Infinity" prefHeight="36" style="-fx-background-color: #FF5722; -fx-text-fill: white; -fx-font-size: 11px; -fx-background-radius: 4; -fx-cursor: hand;" text="CLEAR" HBox.hgrow="ALWAYS">
                        <graphic><FontAwesomeIcon fill="white" glyphName="TRASH" size="1em" /></graphic>
                    </Button>
                </HBox>
            </VBox>
        </HBox>
    </VBox>

    <!-- RIGHT SIDE: Existing Bills Panel (40%) -->
    <VBox spacing="0" style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-width: 0 0 0 1;">

        <!-- Panel Header -->
        <HBox alignment="CENTER_LEFT" spacing="8" style="-fx-background-color: linear-gradient(to right, #7B1FA2, #9C27B0); -fx-padding: 10 12;">
            <FontAwesomeIcon fill="white" glyphName="LIST_ALT" size="1.2em" />
            <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;" text="PURCHASE BILLS" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnRefreshBills" style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-size: 10px; -fx-background-radius: 12; -fx-cursor: hand; -fx-padding: 4 10;">
                <graphic>
                    <FontAwesomeIcon fill="white" glyphName="REFRESH" size="0.9em" />
                </graphic>
            </Button>
        </HBox>

        <!-- Search Filters Section -->
        <VBox spacing="8" style="-fx-background-color: #FAFAFA; -fx-padding: 10; -fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0;">

            <!-- Row 1: Date Range -->
            <HBox alignment="CENTER_LEFT" spacing="6">
                <FontAwesomeIcon fill="#7B1FA2" glyphName="CALENDAR" size="1em" />
                <DatePicker fx:id="dpSearchFromDate" prefHeight="34" prefWidth="130" promptText="From Date" style="-fx-font-size: 14px; -fx-background-radius: 4;" />
                <Label style="-fx-text-fill: #757575; -fx-font-size: 14px;" text="to" />
                <DatePicker fx:id="dpSearchToDate" prefHeight="34" prefWidth="130" promptText="To Date" style="-fx-font-size: 14px; -fx-background-radius: 4;" />
            </HBox>

            <!-- Row 2: Bill No Search -->
            <HBox alignment="CENTER_LEFT" spacing="6">
                <FontAwesomeIcon fill="#7B1FA2" glyphName="FILE_TEXT_ALT" size="1em" />
                <TextField fx:id="txtSearchBillNo" prefHeight="34" promptText="Bill Number" style="-fx-font-size: 14px; -fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-radius: 4; -fx-background-radius: 4;" HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- Row 3: Supplier Search (AutocompleteTextField added programmatically) -->
            <HBox fx:id="hboxSearchSupplier" alignment="CENTER_LEFT" spacing="6">
                <FontAwesomeIcon fill="#7B1FA2" glyphName="TRUCK" size="1em" />
            </HBox>

            <!-- Action Buttons -->
            <HBox alignment="CENTER" spacing="6">
                <Button fx:id="btnSearchBills" maxWidth="Infinity" prefHeight="28" style="-fx-background-color: #7B1FA2; -fx-text-fill: white; -fx-font-size: 10px; -fx-font-weight: bold; -fx-background-radius: 4; -fx-cursor: hand; -fx-padding: 5 14;" HBox.hgrow="ALWAYS">
                    <graphic>
                        <FontAwesomeIcon fill="white" glyphName="SEARCH" size="0.9em" />
                    </graphic>
                    <text>Search</text>
                </Button>
                <Button fx:id="btnClearSearch" prefHeight="28" style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-font-size: 10px; -fx-background-radius: 4; -fx-cursor: hand; -fx-padding: 5 10;">
                    <graphic>
                        <FontAwesomeIcon fill="white" glyphName="TIMES" size="0.9em" />
                    </graphic>
                </Button>
            </HBox>
        </VBox>

        <!-- Existing Bills Table -->
        <TableView fx:id="tblExistingBills" fixedCellSize="32" style="-fx-font-size: 14px; -fx-background-color: white;" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colBillNo" minWidth="60" prefWidth="70" style="-fx-alignment: CENTER;" text="Bill#" />
                <TableColumn fx:id="colBillDate" minWidth="90" prefWidth="100" style="-fx-alignment: CENTER;" text="Date" />
                <TableColumn fx:id="colSupplierName" minWidth="120" prefWidth="140" text="Supplier" />
                <TableColumn fx:id="colBillAmount" minWidth="90" prefWidth="100" style="-fx-alignment: CENTER-RIGHT;" text="Amount" />
                <TableColumn fx:id="colBillStatus" minWidth="70" prefWidth="80" style="-fx-alignment: CENTER;" text="Status" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <!-- Summary Footer -->
        <VBox spacing="0" style="-fx-background-color: linear-gradient(to bottom, #F5F5F5, #EEEEEE); -fx-padding: 0; -fx-border-color: #E0E0E0; -fx-border-width: 1 0 0 0;">
            <HBox alignment="CENTER" spacing="0">
                <!-- Pending -->
                <VBox alignment="CENTER" spacing="2" style="-fx-padding: 8 12; -fx-border-color: #E0E0E0; -fx-border-width: 0 1 0 0;" HBox.hgrow="ALWAYS">
                    <Label style="-fx-font-size: 9px; -fx-text-fill: #9E9E9E;" text="PENDING" />
                    <Label fx:id="lblTotalPending" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #FF9800;" text="₹0" />
                </VBox>
                <!-- Paid -->
                <VBox alignment="CENTER" spacing="2" style="-fx-padding: 8 12; -fx-border-color: #E0E0E0; -fx-border-width: 0 1 0 0;" HBox.hgrow="ALWAYS">
                    <Label style="-fx-font-size: 9px; -fx-text-fill: #9E9E9E;" text="PAID" />
                    <Label fx:id="lblTotalPaid" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;" text="₹0" />
                </VBox>
                <!-- Total -->
                <VBox alignment="CENTER" spacing="2" style="-fx-background-color: #7B1FA2; -fx-padding: 8 12;" HBox.hgrow="ALWAYS">
                    <Label style="-fx-font-size: 9px; -fx-text-fill: rgba(255,255,255,0.7);" text="TOTAL" />
                    <Label fx:id="lblTotalAmount" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: white;" text="₹0" />
                </VBox>
            </HBox>
        </VBox>
    </VBox>
    </SplitPane>
</AnchorPane>
