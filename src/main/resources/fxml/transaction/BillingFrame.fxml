                                                <TextField fx:id="txtCashReceived" alignment="CENTER" prefWidth="80" promptText="0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #1565C0; -fx-background-color: transparent; -fx-padding: 0;" />
                                             </children>
                                          </HBox>
                                          <!-- Return -->
                                          <HBox alignment="CENTER" spacing="6" style="-fx-background-color: white; -fx-border-color: #FF9800; -fx-border-width: 1; -fx-border-radius: 4; -fx-background-radius: 4; -fx-padding: 4 12;">
                                             <children>
                                                <Label style="-fx-font-size: 11px; -fx-text-fill: #F57C00;" text="Return:" />
                                                <TextField fx:id="txtReturnToCustomer" alignment="CENTER" prefWidth="70" promptText="0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #EF6C00; -fx-background-color: transparent; -fx-padding: 0;" />
                                             </children>
                                          </HBox>
                                          <!-- Change -->
                                          <HBox alignment="CENTER" spacing="6" style="-fx-background-color: #E1BEE7; -fx-background-radius: 4; -fx-padding: 5 12;">
                                             <children>
                                                <Label style="-fx-font-size: 11px; -fx-text-fill: #7B1FA2;" text="Change:" />
                                                <Label fx:id="lblChange" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #6A1B9A;" text="₹0" />
                                             </children>
                                          </HBox>
                                          <!-- Due -->
                                          <HBox alignment="CENTER" spacing="6" style="-fx-background-color: #FFCDD2; -fx-background-radius: 4; -fx-padding: 5 12;">
                                             <children>
                                                <Label style="-fx-font-size: 11px; -fx-text-fill: #C62828;" text="Due:" />
                                                <Label fx:id="lblBalance" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #B71C1C;" text="₹0" />
                                             </children>
                                          </HBox>
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>

                              <!-- Bill Action Buttons Row -->
                              <HBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-width: 1 0 0 0; -fx-padding: 12;">
                                 <children>
                                    <!-- CLOSE Button -->
                                    <Button fx:id="btnClose" style="-fx-background-color: #607D8B; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-background-radius: 4; -fx-min-width: 100; -fx-pref-height: 35; -fx-cursor: hand;" text="CLOSE">
                                       <graphic>
                                          <FontAwesomeIcon fill="white" glyphName="TIMES" size="1em" />
                                       </graphic>
                                    </Button>

                                    <!-- PAID Button -->
                                    <Button fx:id="btnPaid" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-background-radius: 4; -fx-min-width: 100; -fx-pref-height: 35; -fx-cursor: hand;" text="PAID">
                                       <graphic>
                                          <FontAwesomeIcon fill="white" glyphName="CHECK" size="1em" />
                                       </graphic>
                                    </Button>

                                    <!-- Shift Table Button -->
                                    <Button fx:id="btnShiftTable" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-background-radius: 4; -fx-min-width: 100; -fx-pref-height: 35; -fx-cursor: hand;" text="SHIFT">
                                       <graphic>
                                          <FontAwesomeIcon fill="white" glyphName="EXCHANGE" size="1em" />
                                       </graphic>
                                    </Button>

                                    <!-- OLD BILL Button -->
                                    <Button fx:id="btnOldBill" style="-fx-background-color: #9C27B0; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-background-radius: 4; -fx-min-width: 100; -fx-pref-height: 35; -fx-cursor: hand;" text="OLD BILL">
                                       <graphic>
                                          <FontAwesomeIcon fill="white" glyphName="HISTORY" size="1em" />
                                       </graphic>
                                    </Button>

                                    <!-- EDIT Button -->
                                    <Button fx:id="btnEditBill" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-background-radius: 4; -fx-min-width: 100; -fx-pref-height: 35; -fx-cursor: hand;" text="EDIT">
                                       <graphic>
                                          <FontAwesomeIcon fill="white" glyphName="PENCIL" size="1em" />
                                       </graphic>
                                    </Button>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </content></ScrollPane>
            </VBox>

            <!-- Right Side of Split - Bill History (20%) - Modern Design -->
            <VBox fx:id="orderDetailsContainer" spacing="0" styleClass="bill-history-panel" style="-fx-background-color: #FFFFFF;">

                <!-- Panel Header - Gradient -->
                <HBox alignment="CENTER_LEFT" spacing="8" style="-fx-background-color: linear-gradient(to right, #7B1FA2, #9C27B0); -fx-padding: 10 12;">
                    <FontAwesomeIcon fill="white" glyphName="HISTORY" size="1.2em" />
                    <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;" text="BILL HISTORY" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button fx:id="btnRefreshBills" style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-size: 10px; -fx-background-radius: 12; -fx-cursor: hand; -fx-padding: 4 10;">
                        <graphic>
                            <FontAwesomeIcon fill="white" glyphName="REFRESH" size="0.9em" />
                        </graphic>
                    </Button>
                </HBox>

                <!-- Search Filters Section -->
                <VBox spacing="10" style="-fx-background-color: #FAFAFA; -fx-padding: 12; -fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0;">

                    <!-- Row 1: Date Picker -->
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <FontAwesomeIcon fill="#7B1FA2" glyphName="CALENDAR" size="1em" />
                        <DatePicker fx:id="dpSearchDate" prefHeight="32" prefWidth="1000" promptText="Select Date" style="-fx-font-size: 11px; -fx-background-radius: 4;" HBox.hgrow="ALWAYS" />
                    </HBox>

                    <!-- Row 2: Bill No -->
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <FontAwesomeIcon fill="#7B1FA2" glyphName="FILE_TEXT_ALT" size="1em" />
                        <TextField fx:id="txtSearchBillNo" prefHeight="32" promptText="Bill Number" style="-fx-font-size: 11px; -fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-radius: 4; -fx-background-radius: 4;" HBox.hgrow="ALWAYS" />
                    </HBox>

                    <!-- Row 3: Customer Search (AutoComplete container) -->
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <FontAwesomeIcon fill="#7B1FA2" glyphName="USER" size="1em" />
                        <HBox fx:id="billHistoryCustomerSearchContainer" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-radius: 4; -fx-background-radius: 4;" HBox.hgrow="ALWAYS">
                            <TextField fx:id="txtSearchCustomer" prefHeight="32" promptText="Customer Name" style="-fx-font-size: 11px; -fx-background-color: transparent; -fx-border-color: transparent;" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </HBox>

                    <!-- Action Buttons -->
                    <HBox alignment="CENTER" spacing="8">
                        <Button fx:id="btnSearchBills" prefHeight="30" style="-fx-background-color: #7B1FA2; -fx-text-fill: white; -fx-font-size: 11px; -fx-font-weight: bold; -fx-background-radius: 4; -fx-cursor: hand; -fx-padding: 6 16;" HBox.hgrow="ALWAYS" maxWidth="Infinity">
                            <graphic>
                                <FontAwesomeIcon fill="white" glyphName="SEARCH" size="0.9em" />
                            </graphic>
                            <text>Search</text>
                        </Button>
                        <Button fx:id="btnClearSearch" prefHeight="30" style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-font-size: 11px; -fx-background-radius: 4; -fx-cursor: hand; -fx-padding: 6 12;">
                            <graphic>
                                <FontAwesomeIcon fill="white" glyphName="TIMES" size="0.9em" />
                            </graphic>
                        </Button>
                    </HBox>
                </VBox>

                <!-- Bills Table -->
                <TableView fx:id="tblBillHistory" fixedCellSize="26" styleClass="bill-history-table" style="-fx-font-size: 11px; -fx-background-color: white;" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colBillNo" minWidth="45" prefWidth="50" text="#" />
                        <TableColumn fx:id="colBillDate" minWidth="70" prefWidth="75" text="Date" />
                        <TableColumn fx:id="colBillCustomer" minWidth="80" prefWidth="90" text="Customer" />
                        <TableColumn fx:id="colBillAmount" minWidth="60" prefWidth="65" text="Amount" />
                        <TableColumn fx:id="colBillStatus" minWidth="50" prefWidth="55" text="Status" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <!-- Summary Footer -->
                <VBox spacing="0" style="-fx-background-color: linear-gradient(to bottom, #F5F5F5, #EEEEEE); -fx-padding: 0; -fx-border-color: #E0E0E0; -fx-border-width: 1 0 0 0;">
                    <!-- Summary Stats -->
                    <HBox alignment="CENTER" spacing="0">
                        <!-- Cash -->
                        <VBox alignment="CENTER" spacing="2" style="-fx-padding: 8 12; -fx-border-color: #E0E0E0; -fx-border-width: 0 1 0 0;" HBox.hgrow="ALWAYS">
                            <Label style="-fx-font-size: 9px; -fx-text-fill: #9E9E9E;" text="CASH" />
                            <Label fx:id="lblTotalCash" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;" text="₹0" />
                        </VBox>
                        <!-- Credit -->
                        <VBox alignment="CENTER" spacing="2" style="-fx-padding: 8 12; -fx-border-color: #E0E0E0; -fx-border-width: 0 1 0 0;" HBox.hgrow="ALWAYS">
                            <Label style="-fx-font-size: 9px; -fx-text-fill: #9E9E9E;" text="CREDIT" />
                            <Label fx:id="lblTotalCredit" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #FF9800;" text="₹0" />
                        </VBox>
                        <!-- Total -->
                        <VBox alignment="CENTER" spacing="2" style="-fx-background-color: #7B1FA2; -fx-padding: 8 12;" HBox.hgrow="ALWAYS">
                            <Label style="-fx-font-size: 9px; -fx-text-fill: rgba(255,255,255,0.7);" text="TOTAL" />
                            <Label fx:id="lblTotalBills" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: white;" text="₹0" />
                        </VBox>
                    </HBox>
                </VBox>
            </VBox>

        </SplitPane>
    </center>

</BorderPane>
