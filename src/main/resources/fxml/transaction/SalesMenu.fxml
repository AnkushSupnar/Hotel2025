<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="20" style="-fx-background-color: #ECEFF1; -fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.frontend.controller.transaction.SalesMenuController">

    <!-- Header -->
    <HBox alignment="CENTER" spacing="15" style="-fx-background-color: linear-gradient(to right, #4CAF50, #388E3C); -fx-background-radius: 8; -fx-padding: 15;">
        <FontAwesomeIcon fill="white" glyphName="SHOPPING_CART" size="1.8em" />
        <Label style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" text="SALES MENU" />
        <Region HBox.hgrow="ALWAYS" />
    </HBox>

    <!-- Sales Cards Container -->
    <HBox alignment="CENTER" spacing="40" style="-fx-padding: 40 0;">

        <!-- Billing Card -->
        <VBox alignment="CENTER" spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 3); -fx-min-width: 280; -fx-min-height: 320;">
            <VBox alignment="CENTER" style="-fx-background-color: linear-gradient(to bottom right, #4CAF50, #388E3C); -fx-background-radius: 50; -fx-padding: 25;">
                <FontAwesomeIcon fill="white" glyphName="CREDIT_CARD" size="3.5em" />
            </VBox>
            <Label style="-fx-text-fill: #212121; -fx-font-size: 20px; -fx-font-weight: bold;" text="BILLING" />
            <Label style="-fx-text-fill: #757575; -fx-font-size: 13px; -fx-wrap-text: true; -fx-text-alignment: center; -fx-max-width: 220;" text="Create new bills and manage sales transactions" />
            <Region VBox.vgrow="ALWAYS" />
            <VBox alignment="CENTER" spacing="12">
                <Button fx:id="btnBilling" prefHeight="45" prefWidth="200" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;" text="NEW BILL">
                    <graphic>
                        <FontAwesomeIcon fill="white" glyphName="PLUS_CIRCLE" size="1.3em" />
                    </graphic>
                </Button>
            </VBox>
        </VBox>

        <!-- Receive Payment Card -->
        <VBox alignment="CENTER" spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 3); -fx-min-width: 280; -fx-min-height: 320;">
            <VBox alignment="CENTER" style="-fx-background-color: linear-gradient(to bottom right, #009688, #00796B); -fx-background-radius: 50; -fx-padding: 25;">
                <FontAwesomeIcon fill="white" glyphName="DOWNLOAD" size="3.5em" />
            </VBox>
            <Label style="-fx-text-fill: #212121; -fx-font-size: 20px; -fx-font-weight: bold;" text="RECEIVE PAYMENT" />
            <Label style="-fx-text-fill: #757575; -fx-font-size: 13px; -fx-wrap-text: true; -fx-text-alignment: center; -fx-max-width: 220;" text="Receive payment from customers for credit sales" />
            <Region VBox.vgrow="ALWAYS" />
            <VBox alignment="CENTER" spacing="12">
                <Button fx:id="btnReceivePayment" prefHeight="45" prefWidth="200" style="-fx-background-color: #009688; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;" text="RECEIVE NOW">
                    <graphic>
                        <FontAwesomeIcon fill="white" glyphName="MONEY" size="1.3em" />
                    </graphic>
                </Button>
                <Button fx:id="btnViewReceipts" prefHeight="38" prefWidth="200" style="-fx-background-color: #B2DFDB; -fx-text-fill: #009688; -fx-font-size: 13px; -fx-background-radius: 5; -fx-cursor: hand;" text="VIEW RECEIPTS">
                    <graphic>
                        <FontAwesomeIcon fill="#009688" glyphName="LIST" size="1em" />
                    </graphic>
                </Button>
            </VBox>
        </VBox>

    </HBox>

</VBox>
