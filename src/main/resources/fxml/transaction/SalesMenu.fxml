<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="TOP_CENTER" spacing="20" style="-fx-background-color: #ECEFF1; -fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.frontend.controller.transaction.SalesMenuController">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: linear-gradient(to right, #4CAF50, #388E3C); -fx-background-radius: 8; -fx-padding: 15;">
        <!-- Back Button -->
        <Button fx:id="btnBack" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 5; -fx-cursor: hand;">
            <graphic>
                <HBox alignment="CENTER" spacing="8">
                    <FontAwesomeIcon fill="white" glyphName="ARROW_LEFT" size="1.3em" />
                    <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="BACK" />
                </HBox>
            </graphic>
        </Button>

        <Region HBox.hgrow="ALWAYS" />

        <!-- Title -->
        <HBox alignment="CENTER" spacing="10">
            <FontAwesomeIcon fill="white" glyphName="SHOPPING_CART" size="1.8em" />
            <Label style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" text="SALES MENU" />
        </HBox>

        <Region HBox.hgrow="ALWAYS" />
    </HBox>

    <!-- Sales Cards Container - Dashboard Style -->
    <HBox alignment="CENTER" spacing="30" style="-fx-padding: 40 0;">

        <!-- Billing Card - Blue (Total Tables color) -->
        <VBox fx:id="btnBilling" alignment="CENTER" spacing="8" style="-fx-background-color: linear-gradient(to bottom right, #4099ff, #5cb3ff); -fx-background-radius: 16; -fx-padding: 18; -fx-cursor: hand; -fx-pref-width: 185; -fx-pref-height: 185; -fx-min-width: 185; -fx-min-height: 185; -fx-max-width: 185; -fx-max-height: 185; -fx-effect: dropshadow(three-pass-box, rgba(64, 153, 255, 0.4), 12, 0, 0, 4);">
            <StackPane style="-fx-min-width: 54; -fx-min-height: 54; -fx-max-width: 54; -fx-max-height: 54; -fx-background-color: rgba(255,255,255,0.25); -fx-background-radius: 27;">
                <FontAwesomeIcon fill="#FFFFFF" glyphName="CREDIT_CARD" size="1.8em" />
            </StackPane>
            <Label fx:id="lblBillingTitle" style="-fx-text-fill: white; -fx-font-size: 25px; -fx-font-weight: bold;" text="DolaI ibalaIMga" />
            <Label style="-fx-text-fill: rgba(255,255,255,0.85); -fx-font-size: 12px;" text="New Bill" />
        </VBox>

        <!-- Receive Payment Card - Green (Available Tables color) -->
        <VBox fx:id="btnReceivePayment" alignment="CENTER" spacing="8" style="-fx-background-color: linear-gradient(to bottom right, #2ed8b6, #59e0c5); -fx-background-radius: 16; -fx-padding: 18; -fx-cursor: hand; -fx-pref-width: 185; -fx-pref-height: 185; -fx-min-width: 185; -fx-min-height: 185; -fx-max-width: 185; -fx-max-height: 185; -fx-effect: dropshadow(three-pass-box, rgba(46, 216, 182, 0.4), 12, 0, 0, 4);">
            <StackPane style="-fx-min-width: 54; -fx-min-height: 54; -fx-max-width: 54; -fx-max-height: 54; -fx-background-color: rgba(255,255,255,0.25); -fx-background-radius: 27;">
                <FontAwesomeIcon fill="#FFFFFF" glyphName="MONEY" size="1.8em" />
            </StackPane>
            <Label fx:id="lblReceivePaymentTitle" style="-fx-text-fill: white; -fx-font-size: 25px; -fx-font-weight: bold;" text="jamaa pavataI" />
            <Label style="-fx-text-fill: rgba(255,255,255,0.85); -fx-font-size: 12px;" text="Payment Received" />
        </VBox>

    </HBox>

</VBox>
